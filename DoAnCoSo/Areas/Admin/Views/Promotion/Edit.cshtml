@model DoAnCoSo.Models.Promotion
@{
    ViewData["Title"] = "✏️ Cập nhật khuyến mãi";
}

<link rel="stylesheet" href="~/css/booking.css" />

<div class="container my-5">
    <div class="booking-card mx-auto" style="max-width: 750px;">
        <h2 class="booking-title text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <!-- Tiêu đề -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold">Tiêu đề</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <!-- Mã khuyến mãi -->
            <div class="mb-3">
                <label asp-for="Code" class="form-label fw-semibold">Mã khuyến mãi</label>
                <input asp-for="Code" class="form-control" />
            </div>

            <!-- Mô tả ngắn -->
            <div class="mb-3">
                <label asp-for="ShortDescription" class="form-label fw-semibold">Mô tả ngắn</label>
                <input asp-for="ShortDescription" class="form-control" placeholder="VD: Giảm 10% cho mọi đơn trên 100k" />
            </div>

            <!-- Chi tiết khuyến mãi -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Chi tiết khuyến mãi</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <!-- Campaign / Image -->
            <div class="form-check mb-3">
                <input asp-for="IsCampaign" class="form-check-input" id="isCampaign" />
                <label class="form-check-label" for="isCampaign">Hiển thị như chiến dịch (có ảnh)</label>
            </div>

            <div id="imageGroup" class="mb-3" style="display:@(Model.IsCampaign ? "block" : "none")">
                <label class="form-label fw-semibold">Ảnh khuyến mãi</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div class="mt-3">
                        <p class="fw-semibold">Ảnh hiện tại:</p>
                        <img src="~/images/promotions/@Model.Image"
                             alt="@Model.Title"
                             style="max-width: 250px; border-radius: 12px; box-shadow: 0 2px 6px rgba(0,0,0,0.2);" />
                    </div>
                }
            </div>

            <!-- Giảm giá -->
            <div class="mb-3">
                <label asp-for="Discount" class="form-label fw-semibold">Mức giảm</label>
                <input asp-for="Discount" class="form-control" type="number" step="0.01" />
                <div class="form-check mt-1">
                    <input asp-for="IsPercent" class="form-check-input" />
                    <label class="form-check-label">Giảm theo phần trăm (%)</label>
                </div>
            </div>

            <!-- HIDDEN FIELD ĐỂ SUBMIT -->
            <input asp-for="StartDate" type="hidden" />
            <input asp-for="EndDate" type="hidden" />

            <!-- INPUT HIỂN THỊ -->
            <div class="row g-3 mb-3">
                <div class="col">
                    <label class="form-label fw-semibold">Ngày bắt đầu</label>
                    <input type="text" id="startPicker" class="form-control"
                           placeholder="Chọn ngày bắt đầu..." required />
                </div>
                <div class="col">
                    <label class="form-label fw-semibold">Ngày kết thúc</label>
                    <input type="text" id="endPicker" class="form-control"
                           placeholder="Chọn ngày kết thúc..." required />
                </div>
            </div>


            <!-- Giá trị đơn tối thiểu -->
            <div class="mb-3">
                <label asp-for="MinOrderValue" class="form-label fw-semibold">Giá trị đơn tối thiểu</label>
                <input asp-for="MinOrderValue" class="form-control" type="number" step="1000" />
            </div>

            <!-- Tổng lượt & mỗi user -->
            <div class="row g-3 mb-3">
                <div class="col">
                    <label asp-for="MaxUsage" class="form-label fw-semibold">Tổng lượt sử dụng</label>
                    <input asp-for="MaxUsage" class="form-control" type="number" />
                </div>
                <div class="col">
                    <label asp-for="MaxUsagePerUser" class="form-label fw-semibold">Số lần mỗi user được dùng</label>
                    <input asp-for="MaxUsagePerUser" class="form-control" type="number" />
                </div>
            </div>

            <!-- Trạng thái -->
            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">Đang hoạt động</label>
            </div>

            <!-- Mã riêng tư -->
            <div class="form-check mb-3">
                <input asp-for="IsPrivate" class="form-check-input" id="isPrivateChk" />
                <label class="form-check-label" for="isPrivateChk">🔒 Mã chỉ dành cho user cụ thể</label>
            </div>

            <!-- Gán user -->
            <div id="assignUserDiv" style="display:@(Model.IsPrivate ? "block" : "none")">
                <label class="form-label fw-bold mt-3">👥 Chọn người dùng được áp dụng</label>
                <select id="userSelector" name="AssignedUserIdentifiers[]" class="form-select" multiple="multiple">
                    @if (ViewBag.AssignedUsers != null)
                    {
                        foreach (var user in ViewBag.AssignedUsers)
                        {
                            <option value="@user.Id" selected>@($"{user.FullName ?? "(Chưa có tên)"} - {user.Email}")</option>
                        }
                    }
                </select>
            </div>

            <!-- Nút hành động -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm">← Quay lại</a>
                <button type="submit" class="btn btn-pink px-4 py-2 rounded-pill shadow-sm">💾 Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const campaignCheckbox = document.getElementById('isCampaign');
            const imageGroup = document.getElementById('imageGroup');
            function toggleImageGroup() {
                imageGroup.style.display = campaignCheckbox.checked ? 'block' : 'none';
            }
            campaignCheckbox.addEventListener('change', toggleImageGroup);
            toggleImageGroup();

            const privateCheckbox = document.getElementById('isPrivateChk');
            const assignDiv = document.getElementById('assignUserDiv');
            function toggleAssignUserDiv() {
                assignDiv.style.display = privateCheckbox.checked ? 'block' : 'none';
            }
            privateCheckbox.addEventListener('change', toggleAssignUserDiv);
            toggleAssignUserDiv();

            $('#userSelector').select2({
                placeholder: "Nhập tên hoặc email để tìm...",
                allowClear: true,
                multiple: true,
                closeOnSelect: false,
                ajax: {
                    url: '@Url.Action("SearchUsers", "Promotion", new { area = "Admin" })',
                    dataType: 'json',
                    delay: 300,
                    data: params => ({ term: params.term }),
                    processResults: data => ({
                        results: data.map(u => ({
                            id: u.id,
                            text: `${u.fullName || '(Chưa có tên)'} - ${u.email}`
                        }))
                    })
                }
            });


               // ===== Flatpickr + Hidden Date Binding =====
        const startHidden = document.querySelector("input[name='StartDate']");
        const endHidden   = document.querySelector("input[name='EndDate']");

        // set hidden từ DB
        startHidden.value = "@Model.StartDate.ToString("o")";
        endHidden.value   = "@Model.EndDate.ToString("o")";

        const startPicker = flatpickr("#startPicker", {
            altInput: true,
            altFormat: "d/m/Y",     // hiển thị
            dateFormat: "Y-m-d",    // format nội bộ
            locale: "vn",
            disableMobile: true,

            // 🔑 PHẢI LÀ yyyy-MM-dd
            defaultDate: "@Model.StartDate.ToString("yyyy-MM-dd")",

            onChange: function (selectedDates) {
                if (selectedDates.length > 0) {
                   startHidden.value = toYMD(selectedDates[0]);
                    endPicker.set('minDate', selectedDates[0]);
                }
            }
        });

        const endPicker = flatpickr("#endPicker", {
            altInput: true,
            altFormat: "d/m/Y",
            dateFormat: "Y-m-d",
            locale: "vn",
            disableMobile: true,

            defaultDate: "@Model.EndDate.ToString("yyyy-MM-dd")",

            onChange: function (selectedDates) {
                if (selectedDates.length > 0) {
                    endHidden.value   = toYMD(selectedDates[0]);
                    startPicker.set('maxDate', selectedDates[0]);
                }
            }
        });


                function toYMD(date) {
            const y = date.getFullYear();
            const m = String(date.getMonth() + 1).padStart(2, '0');
            const d = String(date.getDate()).padStart(2, '0');
            return `${y}-${m}-${d}`;
        }


        });
    </script>
}

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .booking-card {
        border-radius: 16px;
        border: 2px solid var(--pink-accent);
        box-shadow: 0 6px 16px rgba(255, 182, 193, 0.3);
        background-color: #fff;
        padding: 2rem;
    }

    .booking-title {
        color: var(--pink-main);
        font-weight: bold;
        font-size: 1.8rem;
    }

    .form-control, .form-select, .form-check-input {
        border: 1.5px solid var(--pink-main);
        border-radius: 0.5rem;
    }

        .form-check-input:checked {
            background-color: var(--pink-main) !important;
            border-color: var(--pink-main) !important;
        }

    textarea {
        resize: none;
    }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .flatpickr-input.flatpickr-alt-input {
        border: 1.5px solid var(--pink-main);
        border-radius: 0.5rem;
    }


</style>
