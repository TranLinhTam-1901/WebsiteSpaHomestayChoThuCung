@page
@model RegisterModel

<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-10 col-lg-8">
            <div class="card text-black shadow-lg" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <p class="text-center h1 fw-bold mb-4">Đăng ký</p>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.FullName" class="form-label mt-2">Họ và tên</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Input.FullName" class="form-control" placeholder="Tên đầy đủ" autocomplete="fullname" />
                                </div>
                                <span asp-validation-for="Input.FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label mt-2">Email</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" />
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Password" class="form-label mt-2">Mật khẩu</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Mật khẩu" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label mt-2">Xác nhận mật khẩu</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            @* <div class="col-md-3 mb-3"> *@
                            @*     <label asp-for="Input.Age" class="form-label mt-2">Tuổi</label> *@
                            @*     <div class="input-group mt-1"> *@
                            @*         <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span> *@
                            @*         <input asp-for="Input.Age" class="form-control" placeholder="Tuổi" /> *@
                            @*     </div> *@
                            @*     <span asp-validation-for="Input.Age" class="text-danger"></span> *@
                            @* </div> *@

                            @* <div class="col-md-3 mb-3"> </div> *@

							<div class="col-6 mb-3">
								<label asp-for="Input.Address" class="form-label mt-2">Địa chỉ</label>
								<div class="input-group mt-1">
									<span class="input-group-text"><i class="fas fa-home"></i></span>
									<input asp-for="Input.Address" class="form-control" placeholder="Địa chỉ" />
								</div>
								<span asp-validation-for="Input.Address" class="text-danger"></span>
							</div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label mt-2">Số điện thoại</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                                </div>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-check d-flex justify-content-center mb-3">
                            <input class="form-check-input me-2" type="checkbox" required id="termsCheckbox" />
                            <label class="form-check-label" for="termsCheckbox">
                                Tôi đồng ý với <a href="#" class="link-custom">điều khoản dịch vụ</a>
                            </label>
                        </div>


                        <div class="d-flex justify-content-center">
                            <button id="registerSubmit" type="submit" class="btn btn-lg btn-custom">Đăng ký</button>
                        </div>

                        <p class="text-center mt-4">
                            Bạn đã có tài khoản?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-custom">
                                Đăng nhập tại đây
                            </a>
                        </p>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
