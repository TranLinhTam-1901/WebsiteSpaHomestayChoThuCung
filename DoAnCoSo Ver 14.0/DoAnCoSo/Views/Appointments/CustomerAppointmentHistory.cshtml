@model List<DoAnCoSo.Models.Appointment>
@using DoAnCoSo.Extensions

@{
    ViewData["Title"] = "📅 Lịch sử đặt lịch";
}

<style>
    .appointment-wrapper {
        max-width: 960px;
        margin: auto;
        padding-left: 15px;
        padding-right: 15px;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FF6185;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
    }

        .section-title::after {
            content: "";
            display: block;
            width: 60px;
            height: 4px;
            background-color: #FFB6C1;
            margin: 12px auto 0;
            border-radius: 2px;
        }

    .appointment-card {
        border-radius: 16px;
        border: 2px solid #FFB6C1;
        box-shadow: 0 6px 16px rgba(255, 182, 193, 0.3);
        background-color: #fff;
        overflow: hidden;
    }

    .card-header {
        background-color: #fff0f5;
        font-weight: 500;
        font-size: 1rem;
        padding: 15px 20px;
        border-bottom: 1px solid #FFB6C1;
    }

    .card-body {
        font-size: 0.95rem;
        color: #333;
        padding: 15px 20px;
    }

    .card-footer {
        background-color: #fff;
        padding: 12px 20px;
        border-top: 1px solid #FFB6C1;
    }

    .badge {
        font-size: 13px;
        padding: 6px 10px;
        border-radius: 12px;
    }

    .status-deleted {
        background-color: #6c757d; /* xám */
        color: #fff;
    }

    .btn-detail {
        background-color: #FFB6C1;
        color: #000;
        font-weight: bold;
        padding: 8px 16px;
        font-size: 13px;
        border-radius: 25px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-detail:hover {
            background-color: #FF6185;
            color: #fff;
        }

    /* Nút Sửa lịch hẹn */
    .btn-edit {
        border: 2px solid green; /* vàng */
        background-color: transparent;
        color: green;
        font-weight: bold;
        padding: 6px 14px;
        border-radius: 25px;
        font-size: 13px;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background-color: green; /* nền vàng khi hover */
            color: #fff;
        }

    /* Nút Hủy lịch hẹn */
    .btn-delete {
        border: 2px solid red; /* đỏ */
        background-color: transparent;
        color: red;
        font-weight: bold;
        padding: 6px 14px;
        border-radius: 25px;
        font-size: 13px;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background-color: red; /* nền đỏ khi hover */
            color: #fff;
        }

    .no-appointment {
        text-align: center;
        font-size: 1.1rem;
        color: #666;
        margin-top: 40px;
    }

    @@media (max-width: 768px) {
        .section-title

    {
        font-size: 1.6rem;
    }

    .card-header, .card-body, .card-footer {
        padding: 12px;
    }

    .btn-detail {
        font-size: 12px;
        padding: 6px 12px;
    }

    }
</style>

<div class="appointment-wrapper py-5">
    <h2 class="section-title">📅 Lịch sử đặt lịch</h2>

    @if (!Model.Any())
    {
        <p class="no-appointment">Bạn chưa có lịch hẹn nào.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            var displayPetName = item.Pet?.Name ?? item.DeletedPet?.Name ?? "[Đã xóa]";
            var displayPetType = item.Pet?.Type ?? item.DeletedPet?.Type ?? "-";

            <div class="appointment-card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@displayPetName</strong> <small class="text-muted">(@displayPetType)</small><br />
                        <span>Dịch vụ: <strong>@item.Service?.Name</strong></span>
                    </div>
                    <div>
                        @if (item.Status.GetDisplayName() == "Chờ xác nhận")
                        {
                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                        }
                        else if (item.Status.GetDisplayName() == "Đã xác nhận")
                        {
                            <span class="badge bg-success">Đã xác nhận</span>
                        }
                        else if (item.Status.GetDisplayName() == "Đã hủy")
                        {
                            <span class="badge bg-danger">Đã hủy</span>
                        }
                        else if (item.Status.GetDisplayName() == "Đã xóa")
                        {
                            <span class="badge status-deleted">Đã xóa</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.Status.GetDisplayName()</span>
                        }
                    </div>
                </div>

                <div class="card-body">
                    <p class="mb-2">
                        <strong><i class="fas fa-clock me-1"></i> Thời gian hẹn:</strong><br />
                        @if (item.ServiceId >= 1 && item.ServiceId <= 3)
                        {
                            if (item.StartDate != default(DateTime) && item.EndDate != default(DateTime))
                            {
                                @(item.StartDate.ToString("dd/MM/yyyy") + " - " + item.EndDate.ToString("dd/MM/yyyy"))
                            }
                            else if (item.StartDate != default(DateTime))
                            {
                                @(item.StartDate.ToString("dd/MM/yyyy") + " - N/A")
                            }
                            else if (item.EndDate != default(DateTime))
                            {
                                @("N/A - " + item.EndDate.ToString("dd/MM/yyyy"))
                            }
                            else
                            {
                                @:N/A
                            }
                        }
                        else
                        {
                            string dateDisplay = item.AppointmentDate != default(DateTime)
                            ? item.AppointmentDate.ToString("dd/MM/yyyy")
                            : "N/A";
                            string timeDisplay = item.AppointmentTime != TimeSpan.Zero
                            ? item.AppointmentTime.ToString("hh\\:mm")
                            : "N/A";

                            if (dateDisplay == "N/A" && timeDisplay == "N/A")
                            {
                                @:N/A
                            }
                            else if (dateDisplay == "N/A")
                            {
                                @timeDisplay
                            }
                            else if (timeDisplay == "N/A")
                            {
                                @dateDisplay
                            }
                            else
                            {
                                @(dateDisplay + " " + timeDisplay)
                            }
                        }
                    </p>
                </div>

                <div class="card-footer text-end">
                    <!-- Xem chi tiết -->
                    <a asp-action="AppointmentDetails" asp-route-id="@item.AppointmentId" class="btn-detail me-2">
                        <i class="fas fa-info-circle me-1"></i> Xem chi tiết
                    </a>

                    @{
                        // Kiểm tra có thể Sửa/Hủy
                        bool canEditOrCancel = false;

                        if (item.Service.Category == ServiceCategory.Homestay)
                        {
                            canEditOrCancel = item.Status == AppointmentStatus.Pending &&
                            (item.StartDate - DateTime.Now).TotalDays >= 2; // trước 2 ngày
                        }
                        else if (item.Service.Category == ServiceCategory.Spa)
                        {
                            canEditOrCancel = item.Status == AppointmentStatus.Pending &&
                            (item.AppointmentDate - DateTime.Now).TotalDays >= 1; // trước 1 ngày
                        }
                        else if (item.Service.Category == ServiceCategory.Vet)
                        {
                            canEditOrCancel = item.Status == AppointmentStatus.Pending &&
                            (item.AppointmentDate - DateTime.Now).TotalDays >= 1; // trước 1 ngày
                        }
                    }

                    @if (canEditOrCancel)
                    {
                        <!-- Sửa -->
                        @if (item.Service.Category == ServiceCategory.Homestay)
                        {
                            <a asp-action="UpdateAppointmentHomestay" asp-route-id="@item.AppointmentId" class="btn-edit me-2">
                                <i class="fas fa-edit me-1"></i> Sửa
                            </a>
                        }
                        else if (item.Service.Category == ServiceCategory.Spa)
                        {
                            <a asp-action="UpdateAppointmentSpa" asp-route-id="@item.AppointmentId" class="btn-edit me-2">
                                <i class="fas fa-edit me-1"></i> Sửa
                            </a>
                        }
                        else if (item.Service.Category == ServiceCategory.Vet)
                        {
                            <a asp-action="UpdateAppointmentVet" asp-route-id="@item.AppointmentId" class="btn-edit me-2">
                                <i class="fas fa-edit me-1"></i> Sửa
                            </a>
                        }

                        <!-- Hủy (dùng chung) -->
                        <a asp-action="AppointmentCancel"
                           asp-route-id="@item.AppointmentId"
                           class="btn-delete">
                            <i class="fas fa-times me-1"></i> Hủy
                        </a>
                    }
                </div>

            </div>
        }
    }
</div>
