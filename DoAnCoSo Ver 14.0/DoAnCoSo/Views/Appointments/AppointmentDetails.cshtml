@model DoAnCoSo.Models.Appointment
@using DoAnCoSo.Extensions
@using System
@using System.Globalization

@{
    ViewData["Title"] = "Chi tiết lịch đặt";


    TimeZoneInfo vietnamTimeZone = null;
    bool timeZoneFound = false;
    try
    {
        vietnamTimeZone = TimeZoneInfo.FindSystemTimeZoneById("SE Asia Standard Time");
        timeZoneFound = true;
    }
    catch (TimeZoneNotFoundException)
    {
        try
        {
            vietnamTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Asia/Ho_Chi_Minh");
            timeZoneFound = true;
        }
        catch (TimeZoneNotFoundException) { }
    }
    catch (InvalidTimeZoneException) { }

}

<div class="container py-5">
    <h2>Chi tiết lịch đặt</h2>

    <div>
        <h4>Thông tin chi tiết lịch đặt</h4>
        <hr />
        <dl class="row">

            @* --- Thông tin cốt lõi (giữ nguyên) --- *@
            <dt class="col-sm-4">Mã lịch đặt:</dt>
            <dd class="col-sm-8">@Model.AppointmentId</dd>

            <dt class="col-sm-4">Thú cưng:</dt>
            <dd class="col-sm-8">@(Model.Pet?.Name ?? "N/A") (@(Model.Pet?.Type ?? "N/A"))</dd>

            <dt class="col-sm-4">Dịch vụ:</dt>
            <dd class="col-sm-8">@(Model.Service?.Name ?? "N/A")</dd>

            <dt class="col-sm-4">Trạng thái:</dt>
            <dd class="col-sm-8">@Model.Status.GetDisplayName()</dd>

            @* --- Logic HIỂN THỊ "Ngày bắt đầu" có điều kiện --- *@
            <dt class="col-sm-4">Ngày bắt đầu:</dt>
            <dd class="col-sm-8">
                @if (Model.ServiceId >= 1 && Model.ServiceId <= 3) // Dịch vụ Spa (1 ngày)
                {
                    @(Model.AppointmentDate != default(DateTime) ? Model.AppointmentDate.ToShortDateString() : "N/A")
                    @if (Model.AppointmentTime != default(TimeSpan)) // Nếu có cả giờ hẹn cho dịch vụ 1 ngày
                    {
                        @: @Model.AppointmentTime.ToString(@"hh\:mm") @* Hiển thị cả giờ nếu có *@
                    }
                }
                else // Dịch vụ Homestay (nhiều ngày)
                {
                    @(Model.StartDate != default(DateTime) ? Model.StartDate.ToShortDateString() : "N/A")
                }
            </dd>

            @* --- Logic HIỂN THỊ "Ngày kết thúc" có điều kiện --- *@
            <dt class="col-sm-4">Ngày kết thúc:</dt>
            <dd class="col-sm-8">
                @if (Model.ServiceId >= 1 && Model.ServiceId <= 3) // Dịch vụ Spa (1 ngày)
                {
                    @(Model.AppointmentDate != default(DateTime) ? Model.AppointmentDate.ToShortDateString() : "N/A") @* Hiển thị lại AppointmentDate *@
                }
                else // Dịch vụ Homestay (nhiều ngày)
                {
                    @(Model.EndDate != default(DateTime) ? Model.EndDate.ToShortDateString() : "N/A")
                }
            </dd>



            <dt class="col-sm-4">Thời điểm đặt lịch:</dt> @* Ngày đặt (thực hiện thao tác) - giữ nguyên *@
            <dd class="col-sm-8">
                @if (Model.CreatedDate != default(DateTime) && timeZoneFound)
                {
                    var vietnamTime = TimeZoneInfo.ConvertTimeFromUtc(Model.CreatedDate, vietnamTimeZone);
                    @(vietnamTime.ToString("dd/MM/yyyy HH:mm:ss"))
                }
                else if (Model.CreatedDate != default(DateTime) && !timeZoneFound)
                {
                    @(Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss") + " UTC (Lỗi múi giờ)")
                }
                else
                {
                    @:N/A
                }
            </dd>

            @* Thông tin liên hệ (giữ nguyên) *@
            <dt class="col-sm-4">Số điện thoại liên hệ lúc đặt:</dt>
            <dd class="col-sm-8">
                @(Model.OwnerPhoneNumber ?? "N/A")
            </dd>

            @* Tùy chọn hiển thị Số điện thoại từ profile người dùng (nếu cần) *@
            @* <dt class="col-sm-4">Số điện thoại từ Profile:</dt> *@
            @* <dd class="col-sm-8">@(Model.ApplicationUser?.PhoneNumber ?? "N/A")</dd> *@


            @* Thêm các thông tin chi tiết khác nếu có (giữ nguyên) *@

        </dl>
    </div>
    <div class="mt-3">
        @* Link quay trở lại trang lịch sử (giữ nguyên) *@
        <a asp-action="CustomerAppointmentHistory" class="btn btn-secondary">Quay lại lịch sử đặt lịch</a>
        @* Các nút hành động khác nếu cần *@
    </div>
</div>
