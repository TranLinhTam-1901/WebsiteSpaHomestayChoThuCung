            z-index: 10001;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            font-family: "Segoe UI", sans-serif;
            overflow: hidden;
        }

        #chatHeader {
            background: #FF6185;
            color: white;
            padding: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: bold;
            font-size: 20px;
            border-bottom: 3px solid #FFB6C1;
        }

            #chatHeader button {
                background: rgba(255,255,255,0.3);
                border: none;
                color: #fff;
                font-size: 18px;
                border-radius: 50%;
                width: 28px;
                height: 28px;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                #chatHeader button:hover {
                    background: rgba(255,255,255,0.6);
                }

        /* Tin nhắn */
        #messagesList {
            flex: 1;
            padding: 10px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 5px;
            background: #f0f2f5;
        }

        .message-row {
            display: flex;
            margin-bottom: 8px;
            align-items: flex-end;
        }

            .message-row.admin {
                justify-content: flex-end;
            }

        .message-bubble {
            max-width: 70%;
            padding: 10px 15px;
            border-radius: 20px;
            word-wrap: break-word;
            font-size: 0.9rem;
            position: relative;
        }

            .message-bubble.admin {
                background-color: #FF6185;
                color: white;
                border-bottom-right-radius: 0;
            }

            .message-bubble.customer {
                background-color: #d2c6f0;
                color: black;
                border-bottom-left-radius: 0;
            }

        /* Avatar khách */
        .message-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .message-time {
            font-size: 0.7rem;
            color: inherit;
            margin-top: 2px;
            text-align: right;
        }

        /* Input */
        #chatInputWrapper {
            display: flex;
            padding: 8px;
            border-top: 3px solid #FFB6C1;
            background: #fff;
            flex-shrink: 0;
        }

        #messageInput {
            flex: 1;
            border: none;
            padding: 10px 15px;
            border-radius: 20px;
            outline: none;
            background: #f0f2f5;
            font-size: 14px;
            margin-right: 5px;
        }

        #sendButton {
            background-color: #FF6185;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 14px;
        }

        /* Ngắt ngày giống admin */
        .date-separator {
            text-align: center;
            font-size: 0.75rem; /* nhỏ hơn tin nhắn */
