<style>
    #featuredProductsCarousel {
        padding-top: 15px;
        height: 600px; /* Chiều cao khung cố định */
    }

        #featuredProductsCarousel .carousel-inner,
        #featuredProductsCarousel .carousel-item {
            height: 100%; /* Cho các item full khung */
        }

            #featuredProductsCarousel .carousel-item img {
                width: 100%;
                height: 100%;
                object-fit: contain; /* hoặc cover tùy ý */
                border-radius: 10px;
            }

    /* Định dạng card */
    .card {
        border-radius: 10px;
    }

    /* Giúp nút điều hướng dễ nhìn hơn */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 40px;
        height: 40px;
    }

    .carousel-item img {
        border-radius: 10px;
        width: 100%;
        object-fit: contain;
    }

    .carousel-inner img {
        height: 550px; /* Đặt kích thước chiều cao cố định */
        object-fit: contain; /* Đảm bảo ảnh không bị méo */
        border-radius: 10px; /* Bo góc ảnh nhẹ nhàng */
    }

    .swiper-container {
        margin-top: 50px;
        /* Tạo khoảng cách giữa tiêu đề và Swiper */
        padding: 20px 0;
    }

    .swiper-slide {
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .swiper-slide img {
            width: 100%;
            height: 450px; /* Tăng chiều cao để ảnh có tỷ lệ chữ nhật đứng */
            object-fit: cover; /* Đảm bảo ảnh không bị méo */
            border-radius: 10px; /* Giữ bo góc nếu cần */
        }

        .swiper-slide:hover {
            transform: scale(1.05);
        }

    /* Ngăn chọn chữ trong card */
    .card-overlay,
    .card-overlay h3,
    .card-overlay p {
        user-select: none; /* Cấm chọn văn bản */
    }

    /* Ngăn chọn hình ảnh */
    .swiper-slide img {
        pointer-events: auto; /* Cho tương tác với ảnh */
        user-select: none; /* Cấm bôi đen */
    }

    .card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.6);
        color: white;
        text-align: center;
        padding: 15px;
    }

    .carousel-item {
        text-align: center;
        transition: transform 0.6s ease-in-out, opacity 0.6s ease-in-out !important;
        opacity: 1 !important;
        /* Đảm bảo không bị mờ */
    }

        .carousel-item.active {
            opacity: 1 !important;
        }
</style>