@model List<DoAnCoSo.Models.Product>
@{
    ViewData["Title"] = "Tất Cả Sản Phẩm";
}
<div class="container py-5">
    <h2 class="section-title">Tất cả sản phẩm</h2>
    @if (Model != null && Model.Count > 0)
    {
        <div id="productContainer" class="row row-cols-1 row-cols-md-4 g-2" style="margin-left: 0 !important;">
            @foreach (var item in Model)
            {
                <div class="col mt-3 product-item">
                    <div class="card h-100">
                        <div class="product-img-wrapper">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-bold">@item.Name</h5>
                            <p>Thương hiệu: <span class="text-primary fw-semibold">@item.Trademark</span></p>
                            <div class="bg-light p-2 rounded text-center">
                                <p class="mb-0">
                                    @if (item.PriceReduced != null && item.PriceReduced > 0 && item.PriceReduced < item.Price)
                                    {
                                        <span class="fw-bold text-danger fs-4">@($"{item.PriceReduced:N0}đ")</span>
                                        <del class="text-muted">@item.Price.ToString("0.##")đ</del>
                                        <span class="badge bg-danger">@item.DiscountPercentage.ToString("0.##")%</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold text-danger fs-4">@($"{item.Price:N0}đ")</span>
                                    }
                                </p>
                            </div>
                            <div class="mt-auto text-center d-flex flex-column gap-2 pt-3">
                                <div class="d-flex justify-content-between align-items-center w-100 position-relative">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-outline-secondary btn-sm flex-grow-1 text-center">Xem Chi Tiết</a>
                                    <button class="btn btn-sm favorite-btn ms-2 @(ViewBag.FavoriteIds != null && ((List<int>)ViewBag.FavoriteIds).Contains(item.Id) ? "btn-danger" : "btn-outline-danger")"
                                            data-id="@item.Id"
                                            data-authenticated="@User.Identity.IsAuthenticated.ToString().ToLower()">
                                        <i class="@(ViewBag.FavoriteIds != null && ((List<int>)ViewBag.FavoriteIds).Contains(item.Id) ? "bi-heart-fill" : "bi-heart")"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Thanh phân trang -->
        <nav>
            <ul id="pagination" class="pagination justify-content-center mt-4"></ul>
        </nav>
    }
    else
    {
        <p class="text-center mt-3">
            <strong>Không tìm thấy sản phẩm nào phù hợp với từ khóa tìm kiếm.</strong>
        </p>
    }
</div>

<style>
    body {
        background-color: #FFF0F5;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FF6185;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
    }

        .section-title::after {
            content: "";
            display: block;
            width: 80px;
            height: 4px;
            background-color: #FFB6C1;
            margin: 12px auto 0;
            border-radius: 2px;
        }

    .card {
        border: 2px solid #FFB6C1;
        transition: transform 0.3s ease;
    }

    .product-img-wrapper {
        background-color: #FFB6C1;
        padding: 10px;
        border-bottom: 2px solid #FF6185;
    }

    .card-body h5 {
        color: #FF6185;
    }

    .text-primary {
        color: #FF6185 !important;
    }

    .bg-light {
        background-color: #FFE4EC !important;
    }

    .btn-outline-secondary {
        border-color: #FF6185;
        color: #FF6185;
    }

        .btn-outline-secondary:hover {
            background-color: #FF6185;
            color: white;
        }

    .btn-outline-danger {
        border-color: #FF6185;
        color: #FF6185;
    }

        .btn-outline-danger:hover {
            background-color: #FF6185;
            color: white;
        }

    .btn-danger {
        background-color: #FF6185;
        border-color: #FF6185;
    }

        .btn-danger:hover {
            background-color: #e05575;
            border-color: #e05575;
        }

    .badge.bg-danger {
        background-color: #FF6185 !important;
    }

    .pagination .page-link {
        color: #FF6185;
        border-color: #FFB6C1;
    }

        .pagination .page-link:hover {
            background-color: #FFB6C1;
            color: white;
        }

    .pagination .active .page-link {
        background-color: #FF6185;
        border-color: #FF6185;
        color: white;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // ------------------- FAVORITE -------------------
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        const token = tokenInput ? tokenInput.value : '';

        document.querySelectorAll('.favorite-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const productId = btn.getAttribute('data-id');
                const isAuthenticated = btn.getAttribute('data-authenticated') === 'true';

                if (!isAuthenticated) {
                    window.location.href = '/Identity/Account/Login';
                    return;
                }

                try {
                    const response = await fetch('/Favorite/Toggle', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({ id: productId })
                    });

                    const data = await response.json();
                    if (data.success) {
                        btn.classList.toggle('btn-danger', data.isFavorited);
                        btn.classList.toggle('btn-outline-danger', !data.isFavorited);

                        const icon = btn.querySelector('i');
                        icon.classList.toggle('bi-heart-fill', data.isFavorited);
                        icon.classList.toggle('bi-heart', !data.isFavorited);

                        const countElement = document.querySelector('.js-wishlist-count');
                        if (countElement && !isNaN(data.count)) {
                            countElement.textContent = data.count;
                        }
                    }
                } catch (err) {
                    console.error('Toggle yêu thích lỗi:', err);
                }
            });
        });

        // Cập nhật icon yêu thích khi load trang
        fetch('/Favorite/GetFavoriteStatus')
            .then(response => response.json())
            .then(data => {
                document.querySelectorAll('.favorite-btn').forEach(btn => {
                    const productId = btn.getAttribute('data-id');
                    const isFavorited = data.favoriteIds.includes(parseInt(productId));

                    btn.classList.toggle('btn-danger', isFavorited);
                    btn.classList.toggle('btn-outline-danger', !isFavorited);

                    const icon = btn.querySelector('i');
                    icon.classList.toggle('bi-heart-fill', isFavorited);
                    icon.classList.toggle('bi-heart', !isFavorited);
                });
            });

        // ------------------- PAGINATION -------------------
        const itemsPerPage = 15;
        const items = document.querySelectorAll(".product-item");
        const totalItems = items.length;
        const totalPages = Math.ceil(totalItems / itemsPerPage);
        const pagination = document.getElementById("pagination");

        function showPage(page) {
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;

            items.forEach((item, index) => {
                item.style.display = (index >= start && index < end) ? "block" : "none";
            });

            document.querySelectorAll("#pagination li").forEach(li => li.classList.remove("active"));
            const currentPage = document.querySelector(`#pagination li[data-page='${page}']`);
            if (currentPage) currentPage.classList.add("active");

            // 👇 Thêm cuộn về đầu trang
            window.scrollTo({ top: 0, behavior: "smooth" });
        }

        if (totalPages > 1) {
            for (let i = 1; i <= totalPages; i++) {
                const li = document.createElement("li");
                li.classList.add("page-item");
                li.setAttribute("data-page", i);

                const a = document.createElement("a");
                a.classList.add("page-link");
                a.href = "#";
                a.textContent = i;

                li.appendChild(a);
                li.addEventListener("click", function (e) {
                    e.preventDefault();
                    showPage(i);
                });
                pagination.appendChild(li);
            }
        }

        // Hiển thị trang đầu tiên khi load
        showPage(1);
    });
</script>