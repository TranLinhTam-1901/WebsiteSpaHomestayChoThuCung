@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "🎁 Khuyến mãi của tôi";
}

<section class="container py-5">
    <h2 class="text-center text-danger fw-bold mb-4">🎁 Khuyến mãi của tôi</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            Bạn chưa lưu mã khuyến mãi nào.
        </div>
    }
    else
    {
        <table class="table table-bordered align-middle text-center">
            <thead class="table-pink">
                <tr>
                    <th>Tên khuyến mãi</th>
                    <th>Mã</th>
                    <th>Giảm giá</th>
                    <th>Ngày lưu</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var promo in Model)
                {
                    <tr>
                        <td>@promo.Title</td>
                        <td><span class="fw-bold">@promo.Code</span></td>
                        <td>
                            @(promo.IsPercent ? $"{promo.Discount}%" : $"{promo.Discount:N0}đ")
                        </td>
                        <td>@promo.DateSaved.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (promo.EndDate < DateTime.Now)
                            {
                                <span class="badge bg-secondary">Hết hạn</span>
                            }
                            else if (promo.IsUsed)
                            {
                                <span class="badge bg-success">Đã dùng</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Còn hiệu lực</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
