@model DoAnCoSo.Models.Product

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-75">
        <!-- Header -->
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="mb-0 fw-semibold">⚠️ Xác nhận xóa sản phẩm</h2>
        </div>

        <!-- Body -->
        <div class="card-body p-4 text-center">
            <input type="hidden" asp-for="Id" />
            <p class="fs-5 mb-4 text-secondary">
                Bạn có chắc chắn muốn xóa sản phẩm dưới đây không?
            </p>

            <div class="border rounded-4 p-3 bg-light mb-4">
                <ul class="list-unstyled text-start mb-0">
                    <li class="mb-2"><strong>Tên sản phẩm:</strong> @Model.Name</li>
                    <li class="mb-2">
                        <strong>Giá:</strong>
                        @if (Model.PriceReduced.HasValue && Model.PriceReduced < Model.Price)
                        {
                            <span class="text-muted text-decoration-line-through">@Model.Price.ToString("N0") đ</span>
                            <br />
                            <span class="text-danger fw-bold">@Model.PriceReduced.Value.ToString("N0") đ</span>
                        }
                        else
                        {
                            <span>@Model.Price.ToString("N0") đ</span>
                        }
                    </li>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <li class="mb-2"><strong>Mô tả:</strong> @Model.Description</li>
                    }
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <li class="text-center mt-3">
                            <strong>Ảnh sản phẩm:</strong><br />
                            <img src="@Model.ImageUrl" alt="Hình ảnh sản phẩm"
                                 class="img-fluid rounded shadow-sm mt-2 border"
                                 style="max-width:160px; border-color:#FFD1DC;" />
                        </li>
                    }
                </ul>
            </div>

            <!-- Buttons -->
            <div class="mt-3">
                <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm me-2">
                        🗑️ Xóa sản phẩm
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-pink px-4 py-2 rounded-pill shadow-sm">
                    ✖ Hủy
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    /* Header Gradient */
    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: black;
    }

    .btn-gradient-pink {
        background: #FFB6C1;
        color: #000;
        font-weight: bold;
        border: none;
        transition: 0.25s;
    }

        .btn-gradient-pink:hover {
            background-color: #FF6185;
            color: #fff;
        }

    .btn-outline-pink {
        border: 1.5px solid var(--pink-main);
        color: var(--pink-main);
        background-color: #fff;
        transition: 0.25s;
        font-weight: 500;
    }

        .btn-outline-pink:hover {
            background-color: var(--pink-main);
            color: #fff;
        }

    /* Card */
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    /* Border nhẹ */
    .border {
        border: 1px solid #FFD1DC !important;
    }

    /* Căn giữa nội dung */
    ul li {
        line-height: 1.6;
    }
</style>
