@model DoAnCoSo.ViewModels.ProductDetailViewModel

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-75">
        <div class="card-header bg-gradient-pink text-white text-center rounded-top-4">
            <h2 class="mb-0">🌸 Chi tiết sản phẩm 🌸</h2>
        </div>
        <div class="card-body p-4">
            <div class="row align-items-center">
                @if (!string.IsNullOrEmpty(Model.MainImage))
                {
                    <div class="col-md-4 text-center mb-3">
                        <img src="@Model.MainImage" alt="@Model.Product?.Name"
                             class="img-fluid rounded-3 shadow-sm"
                             style="max-height: 250px; object-fit: cover;" />
                        @if (Model.AdditionalImageUrls.Any())
                        {
                            <div class="mt-3 d-flex flex-wrap justify-content-center gap-2">
                                @foreach (var img in Model.AdditionalImageUrls)
                                {
                                    <img src="@img" alt="Ảnh phụ"
                                         class="rounded shadow-sm"
                                         style="width:70px; height:70px; object-fit:cover;" />
                                }
                            </div>
                        }
                    </div>
                }
                <div class="col-md-8">
                    <h3 class="text-gradient-pink fw-bold">@Model.Product?.Name</h3>
                    <p>
                        <strong>Giá:</strong>
                        @if (Model.PriceReduced.HasValue && Model.PriceReduced < Model.Price)
                        {
                            <span class="text-muted text-decoration-line-through">@Model.Price.ToString("N0") đ</span>
                        
                            <br />
                            <span class="text-danger fw-bold fs-5">@Model.PriceReduced.Value.ToString("N0") đ</span>
                            <span class="badge bg-success ms-2">-@Model.DiscountPercentage%</span>
                        }
                        else
                        {
                            <span class="fw-semibold">@Model.Price.ToString("N0") đ</span>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p><strong>Mô tả:</strong> @Model.Description</p>
                    }
                    <p><strong>Thương hiệu:</strong> @Model.Trademark</p>
                    <p><strong>Loại sản phẩm:</strong> @Model.CategoryName</p>
                    @if (Model.Flavors.Any())
                    {
                        <p><strong>Hương vị:</strong> @string.Join(", ", Model.Flavors)</p>
                    }
                    <p>
                        <strong>Đánh giá:</strong>
                        ⭐ @Model.AverageRating.ToString("0.0") / 5
                        ( @Model.TotalReviews đánh giá )
                    </p>
                </div>
            </div>

            @* Hiển thị danh sách review *@
            <div class="mt-4">
                <h5 class="text-gradient-pink">Đánh giá sản phẩm</h5>
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <ul class="list-group">
                        @foreach (var review in Model.Reviews)
                        {
                            <li class="list-group-item">
                                <strong>@review.User?.UserName</strong> - ⭐ @review.Rating<br />
                                <span>@review.Comment</span><br />
                                <small class="text-muted">@review.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted fst-italic">Chưa có đánh giá nào.</p>
                }
            </div>
        </div>
        <div class="card-footer text-center bg-light">
            <a asp-action="Index" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm">
                ← Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FF6B6B;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
    }

    .text-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: #fff;
        border: none;
        transition: 0.3s;
    }

        .btn-gradient-pink:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .border-pink {
        border: 1px solid var(--pink-main);
    }

        .border-pink:focus {
            border-color: var(--pink-accent);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
        }

    .card {
        border-radius: 1rem;
    }
</style>