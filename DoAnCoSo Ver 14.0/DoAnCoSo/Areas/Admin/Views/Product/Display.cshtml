@model DoAnCoSo.ViewModels.ProductDetailViewModel

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-75">
        <!-- Header -->
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="mb-0 fw-semibold">🌸 Chi tiết sản phẩm 🌸</h2>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <div class="row align-items-center">
                @if (!string.IsNullOrEmpty(Model.MainImage))
                {
                    <div class="col-md-4 text-center mb-4">
                        <img src="@Model.MainImage" alt="@Model.Product?.Name"
                             class="img-fluid rounded-4 shadow-sm border-pink"
                             style="max-height: 260px; object-fit: cover;" />
                        @if (Model.AdditionalImageUrls.Any())
                        {
                            <div class="mt-3 d-flex flex-wrap justify-content-center gap-2">
                                @foreach (var img in Model.AdditionalImageUrls)
                                {
                                    <img src="@img" alt="Ảnh phụ"
                                         class="rounded-3 shadow-sm border-pink"
                                         style="width:70px; height:70px; object-fit:cover;" />
                                }
                            </div>
                        }
                    </div>
                }

                <div class="col-md-8">
                    <h3 class="text-gradient-pink fw-bold mb-3">@Model.Product?.Name</h3>

                    <p class="mb-2">
                        <strong>Giá:</strong><br />
                        @if (Model.PriceReduced.HasValue && Model.PriceReduced < Model.Price)
                        {
                            <span class="text-muted text-decoration-line-through">@Model.Price.ToString("N0") đ</span>
                        
                            <br />
                            <span class="text-danger fw-bold fs-5">@Model.PriceReduced.Value.ToString("N0") đ</span>
                            <span class="badge bg-success ms-2">-@Model.DiscountPercentage%</span>
                        }
                        else
                        {
                            <span class="fw-semibold">@Model.Price.ToString("N0") đ</span>
                        }
                    </p>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p><strong>Mô tả:</strong> @Model.Description</p>
                    }

                    <p><strong>Thương hiệu:</strong> @Model.Trademark</p>
                    <p><strong>Loại sản phẩm:</strong> @Model.CategoryName</p>

                    @if (Model.Flavors.Any())
                    {
                        <p><strong>Hương vị:</strong> @string.Join(", ", Model.Flavors)</p>
                    }

                    <p>
                        <strong>Đánh giá:</strong>
                        ⭐ @Model.AverageRating.ToString("0.0") / 5
                        (<span class="text-muted">@Model.TotalReviews đánh giá</span>)
                    </p>
                </div>
            </div>

            <!-- Reviews -->
            <div class="mt-4">
                <h5 class="text-gradient-pink mb-3">📝 Đánh giá sản phẩm</h5>

                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div class="review-list border rounded-4 p-3 bg-light">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="p-2 mb-2 border-bottom">
                                <strong class="text-pink">@review.User?.UserName</strong>
                                <span>- ⭐ @review.Rating</span><br />
                                <span>@review.Comment</span><br />
                                <small class="text-muted">@review.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">Chưa có đánh giá nào.</p>
                }
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer text-center bg-light">
            <a asp-action="Index" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm">
                ← Quay lại danh sách
            </a>
            <a asp-controller="Categories" asp-action="Display" asp-route-id="@Model.Product.CategoryId"
               asp-route-currentPage="@Model.CurrentPage"
               class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm">
                ↷ Quay lại danh mục
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: black;
    }

    .text-gradient-pink {
        color: var(--pink-main);
    }

    .btn-gradient-pink {
        background: #FFB6C1;
        color: #000;
        font-weight: bold;
        border: none;
        transition: 0.25s;
    }

        .btn-gradient-pink:hover {
            background-color: #FF6185;
            color: #fff;
        }

    .border-pink {
        border: 1px solid #FFD1DC !important;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .text-pink {
        color: var(--pink-main);
    }

    .review-list {
        background-color: #fff6f8;
        border-color: #FFD1DC !important;
    }
</style>