@model DoAnCoSo.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-75">
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="mb-0 fw-bold">🌸 Thêm sản phẩm 🌸</h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="Name" class="form-label fw-semibold">Tên sản phẩm</label>
                            <input id="Name" name="Name" class="form-control border-pink" placeholder="Nhập tên sản phẩm..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Price" class="form-label fw-semibold">Giá sản phẩm</label>
                            <input id="Price" name="Price" class="form-control border-pink" placeholder="Nhập giá..." />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label for="PriceReduced" class="form-label fw-semibold">Giá giảm (nếu có)</label>
                            <input id="PriceReduced" name="PriceReduced" class="form-control border-pink" placeholder="Nhập giá giảm..." />
                            <span asp-validation-for="PriceReduced" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Trademark" class="form-label fw-semibold">Thương hiệu</label>
                            <input id="Trademark" name="Trademark" class="form-control border-pink" placeholder="Nhập thương hiệu..." />
                            <span asp-validation-for="Trademark" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold">Loại sản phẩm</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control border-pink"></select>
                        </div>

                        <div class="mb-3">
                            <label for="imageInput" class="form-label fw-semibold">Ảnh đại diện</label>
                            <input type="file" name="imageUrl" class="form-control border-pink" id="imageInput" />
                        </div>

                        <div class="mb-3">
                            <label for="additionalImagesInput" class="form-label fw-semibold">Ảnh sản phẩm khác (Upload nhiều file)</label>
                            <input type="file" id="additionalImagesInput" name="images" class="form-control border-pink" multiple />
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label fw-semibold">Mô tả sản phẩm</label>
                    <textarea id="Description" name="Description" class="form-control border-pink" rows="3" placeholder="Nhập mô tả..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Hương vị</label>
                    <div class="row">
                        @for (int i = 0; i < 3; i++)
                        {
                            <div class="col-md-4 mb-2">
                                <input type="text" name="flavorsList[@i]" class="form-control border-pink" placeholder="Nhập hương vị..." />
                            </div>
                        }
                    </div>
                </div>

                <div class="text-center pt-3">
                    <button type="submit" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm me-2">
                        + Thêm sản phẩm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-pink px-4 py-2 rounded-pill">
                        ← Trở lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: black;
    }

    .btn-gradient-pink {
        background: #FFB6C1;
        color: #000;
        font-weight: bold;
        border: none;
        transition: 0.25s;
    }

        .btn-gradient-pink:hover {
            background-color: #FF6185;
            color: #fff;
        }

    .btn-outline-pink {
        border: 1.5px solid var(--pink-main);
        color: var(--pink-main);
        background-color: #fff;
        transition: 0.25s;
        font-weight: 500;
    }

        .btn-outline-pink:hover {
            background-color: var(--pink-main);
            color: #fff;
        }

    .border-pink {
        border: 1px solid var(--pink-main);
    }

        .border-pink:focus {
            border-color: var(--pink-accent);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
        }

    .card {
        border-radius: 1rem;
    }

    textarea {
        resize: none;
    }

    .col-md-4 {
        height: auto;
    }
</style>
