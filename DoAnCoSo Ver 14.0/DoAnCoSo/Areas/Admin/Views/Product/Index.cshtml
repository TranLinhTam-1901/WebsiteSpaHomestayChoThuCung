@model IEnumerable<DoAnCoSo.Models.Product>

@{
    ViewData["Title"] = "📦 Quản lý sản phẩm";
    int pageSize = 16;
    int totalItems = Model.Count();
    int currentPage = string.IsNullOrEmpty(Context.Request.Query["page"]) ? 1 : int.Parse(Context.Request.Query["page"]);
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    var products = Model.Skip((currentPage - 1) * pageSize).Take(pageSize);
}

<div class="product-wrapper py-5">
    <h2 class="section-title">📦 Quản lý sản phẩm</h2>

    <div class="admin-product-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div></div>
            <a asp-area="Admin" asp-controller="Product" asp-action="Add" class="btn-add">
                <i class="bi bi-plus-circle me-1"></i> Thêm sản phẩm
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle text-center product-table">
                    <thead class="table-pink">
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Tồn kho</th>
                            <th>Mô tả</th>
                            <th>Danh mục</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (products.Any())
                        {
                            foreach (var product in products)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>
                                        <img src="@product.ImageUrl" alt="@product.Name" class="product-img" />
                                    </td>
                                    <td>
                                        @if (product.PriceReduced.HasValue && product.PriceReduced < product.Price)
                                        {
                                            <span class="text-decoration-line-through text-muted d-block">@product.Price.ToString("N0")đ</span>
                                            <span class="fw-bold text-pink">@product.PriceReduced.Value.ToString("N0")đ</span>
                                        }
                                        else
                                        {
                                            <span>@product.Price.ToString("N0")đ</span>
                                        }
                                    </td>
                                    <td>
                                        @product.StockQuantity
                                        @if (product.StockQuantity <= product.LowStockThreshold)
                                        {
                                            <span class="badge bg-danger ms-2">Sắp hết</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success ms-2">OK</span>
                                        }
                                    </td>
                                    <td class="text-truncate" style="max-width: 220px;">@product.Description</td>
                                    <td>@product.Category?.Name</td>
                                    <td class="actions-cell">
                                        <div class="actions">
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn-detail btn-sm">
                                                <i class="bi bi-eye"></i> Xem
                                            </a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn-edit btn-sm">
                                                <i class="bi bi-pencil"></i> Sửa
                                            </a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn-delete btn-sm">
                                                <i class="bi bi-trash"></i> Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="no-product">Chưa có sản phẩm nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @* PHÂN TRANG *@
        @if (totalPages > 1)
        {
            <div class="card-footer bg-white border-0 d-flex justify-content-center py-3">
                <nav>
                    <ul class="pagination pagination-pink mb-0">
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<style>
    .product-wrapper {
        max-width: 1300px;
        margin: auto;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FF6185;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
    }

        .section-title::after {
            content: "";
            display: block;
            width: 80px;
            height: 4px;
            background-color: #FFB6C1;
            margin: 12px auto 0;
            border-radius: 2px;
        }

    .admin-product-card {
        border-radius: 16px;
        border: 2px solid #FFB6C1;
        box-shadow: 0 6px 16px rgba(255,182,193,0.3);
        background-color: #fff;
        overflow: hidden;
    }

        .admin-product-card .card-header {
            background-color: #FFF0F5;
            padding: 12px 20px;
            border-bottom: 1px solid #FFB6C1;
        }

    .btn-add {
        background-color: #FF6185;
        color: #fff;
        font-weight: bold;
        padding: 6px 14px;
        border-radius: 25px;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-add:hover {
            background-color: #FFB6C1;
            color: #000;
        }

    .product-table thead.table-pink {
        background-color: #FFE4E9;
    }

    .product-table th, .product-table td {
        vertical-align: middle;
    }

    .product-table tbody tr:nth-child(even) {
        background-color: #FFF7F9;
    }

    .product-table tbody tr:nth-child(odd) {
        background-color: #FFFFFF;
    }

    .product-img {
        width: 75px;
        height: 75px;
        object-fit: cover;
        border-radius: 8px;
        transition: transform 0.2s ease;
    }

        .product-img:hover {
            transform: scale(1.07);
        }

    .actions {
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-detail, .btn-edit, .btn-delete {
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        font-weight: bold;
        text-decoration: none;
        border: none;
        transition: 0.3s;
    }

    .btn-detail {
        background-color: #FFB6C1;
        color: #000;
    }

        .btn-detail:hover {
            background-color: #FF6185;
            color: #fff;
        }

    .btn-edit {
        border: 2px solid green;
        color: green;
        background-color: transparent;
    }

        .btn-edit:hover {
            background-color: green;
            color: #fff;
        }

    .btn-delete {
        border: 2px solid red;
        color: red;
        background-color: transparent;
    }

        .btn-delete:hover {
            background-color: red;
            color: #fff;
        }

    .no-product {
        text-align: center;
        color: #777;
        padding: 20px 0;
    }

    /* Pagination style */
    .pagination-pink .page-link {
        color: #FF6185;
        border-color: #FFB6C1;
        font-weight: bold;
    }

        .pagination-pink .page-link:hover {
            background-color: #FFB6C1;
            color: #fff;
        }

    .pagination-pink .active .page-link {
        background-color: #FF6185;
        border-color: #FF6185;
        color: #fff;
    }
</style>
