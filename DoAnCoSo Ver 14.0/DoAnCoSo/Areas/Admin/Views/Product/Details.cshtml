@model DoAnCoSo.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    // Reviews & tổng tồn lấy từ ViewBag (được set trong Action Details)
    var reviews = ViewBag.Reviews as List<DoAnCoSo.Models.Review> ?? new();
    var totalReviews = (int)(ViewBag.TotalReviews ?? 0);
    var averageRating = (double)(ViewBag.AverageRating ?? 0d);

    int totalVariantStock = (int)(ViewBag.TotalVariantStock ?? 0);
    int totalVariantReserved = (int)(ViewBag.TotalVariantReserved ?? 0);
    int totalVariantSold = (int)(ViewBag.TotalVariantSold ?? 0);

    // Tính % giảm giá giống view display
    int discountPct = (Model.PriceReduced.HasValue && Model.PriceReduced.Value > 0 && Model.PriceReduced.Value < Model.Price)
        ? (int)Math.Round((1 - (Model.PriceReduced.Value / Model.Price)) * 100)
        : 0;

    // Parse Flavors nếu có
    var flavorList = string.IsNullOrWhiteSpace(Model.Flavors)
        ? new List<string>()
        : Model.Flavors.Split(',').Select(s => s.Trim()).Where(s => s != "").ToList();
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-75">
        <!-- Header -->
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="mb-0 fw-semibold">🌸 Chi tiết sản phẩm 🌸</h2>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <div class="row align-items-center">
                <!-- ẢNH -->
                <div class="col-md-4 text-center mb-4">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name"
                             class="img-fluid rounded-4 shadow-sm border-pink"
                             style="max-height: 260px; object-fit: cover;" />
                    }

                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div class="mt-3 d-flex flex-wrap justify-content-center gap-2">
                            @foreach (var img in Model.Images)
                            {
                                if (!string.IsNullOrWhiteSpace(img.Url))
                                {
                                    <img src="@img.Url" alt="Ảnh phụ"
                                         class="rounded-3 shadow-sm border-pink"
                                         style="width:70px; height:70px; object-fit:cover;" />
                                }
                            }
                        </div>
                    }
                </div>

                <!-- THÔNG TIN CƠ BẢN -->
                <div class="col-md-8">
                    <h3 class="text-gradient-pink fw-bold mb-3">@Model.Name</h3>

                    <p class="mb-2">
                        <strong>Giá:</strong><br />
                        @if (Model.PriceReduced.HasValue && Model.PriceReduced < Model.Price)
                        {
                            <span class="text-muted text-decoration-line-through">
                                @Model.Price.ToString("N0") đ
                            </span>
                            <br />
                            <span class="text-danger fw-bold fs-5">
                                @Model.PriceReduced.Value.ToString("N0") đ
                            </span>
                            <span class="badge bg-success ms-2">-@discountPct%</span>
                        }
                        else
                        {
                            <span class="fw-semibold">@Model.Price.ToString("N0") đ</span>
                        }
                    </p>

                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <p><strong>Mô tả:</strong> @Model.Description</p>
                    }

                    <p class="mb-1"><strong>Thương hiệu:</strong> @Model.Trademark</p>
                    <p class="mb-1"><strong>Loại sản phẩm:</strong> @Model.Category?.Name</p>
                    <p class="mb-1"><strong>Tồn tổng (product):</strong> @Model.StockQuantity</p>

                    @if (flavorList.Any())
                    {
                        <p class="mb-1"><strong>Hương vị:</strong> @string.Join(", ", flavorList)</p>
                    }

                    <p class="mb-0">
                        <strong>Đánh giá:</strong>
                        ⭐ @averageRating.ToString("0.0") / 5
                        (<span class="text-muted">@totalReviews đánh giá</span>)
                    </p>
                </div>
            </div>

            <!-- BIẾN THỂ -->
            <div class="mt-4">
                <h5 class="text-gradient-pink mb-3">🔀 Biến thể & tồn kho</h5>

                @if (Model.Variants != null && Model.Variants.Any())
                {
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Tên</th>
                                <th>SKU</th>
                                <th>Giá override</th>
                                <th>Tồn</th>
                                <th>Đang giữ</th>
                                <th>Đã bán</th>
                                <th>Ngưỡng cảnh báo</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var idx = 1;
                                foreach (var v in Model.Variants.OrderBy(x => x.Name))
                                {
                                    <tr>
                                        <td>@idx</td>
                                        <td>@v.Name</td>
                                        <td>@v.Sku</td>
                                        <td>@(v.PriceOverride?.ToString("N0") ?? "-")</td>
                                        <td>@v.StockQuantity</td>
                                        <td>@v.ReservedQuantity</td>
                                        <td>@v.SoldQuantity</td>
                                        <td>@v.LowStockThreshold</td>
                                        <td>@(v.IsActive ? "Hoạt động" : "Ngừng")</td>
                                    </tr>
                                    ;
                                    idx++;
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <th colspan="4" class="text-end">Tổng:</th>
                                <th>@totalVariantStock</th>
                                <th>@totalVariantReserved</th>
                                <th>@totalVariantSold</th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                }
                else
                {
                    <div class="alert alert-info mb-0">Sản phẩm này chưa có biến thể.</div>
                }
            </div>

            <!-- REVIEWS -->
            <div class="mt-4">
                <h5 class="text-gradient-pink mb-3">📝 Đánh giá sản phẩm</h5>

                @if (reviews.Any())
                {
                    <div class="review-list border rounded-4 p-3 bg-light">
                        @foreach (var review in reviews)
                        {
                            <div class="p-2 mb-2 border-bottom">
                                <strong class="text-pink">@review.User?.UserName</strong>
                                <span>- ⭐ @review.Rating</span><br />
                                <span>@review.Comment</span><br />
                                <small class="text-muted">@review.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">Chưa có đánh giá nào.</p>
                }
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer text-center bg-light">
            <a asp-action="Index" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm">
                ← Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg,var(--pink-main),var(--pink-accent));
        color: #000;
    }

    .text-gradient-pink {
        color: var(--pink-main);
    }

    .btn-gradient-pink {
        background: #FFB6C1;
        color: #000;
        font-weight: bold;
        border: none;
        transition: .25s;
    }

        .btn-gradient-pink:hover {
            background: #FF6185;
            color: #fff;
        }

    .border-pink {
        border: 1px solid #FFD1DC !important;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .text-pink {
        color: var(--pink-main);
    }

    .review-list {
        background: #fff6f8;
        border-color: #FFD1DC !important;
    }
</style>
