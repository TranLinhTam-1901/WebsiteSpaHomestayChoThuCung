@model IEnumerable<DoAnCoSo.Models.Order>

@{
    ViewData["Title"] = "📦 Quản lý đơn hàng";
}

@functions {
    // Trả về tên "Vị" hợp lệ cho 1 OrderDetail
    string ShowOption(DoAnCoSo.Models.OrderDetail d)
    {
        // Ưu tiên biến thể (nếu có)
        if (d.VariantId.HasValue)
        {
            if (!string.IsNullOrWhiteSpace(d.VariantName))
                return d.VariantName;

            // Fallback: tra theo Product.Variants (đã Include ở controller)
            var name = d.Product?.Variants?
                .FirstOrDefault(v => v.Id == d.VariantId.Value)?.Name;
            if (!string.IsNullOrWhiteSpace(name))
                return name;

            return $"Variant #{d.VariantId.Value}";
        }

        // Không có biến thể -> dùng SelectedFlavor
        if (!string.IsNullOrWhiteSpace(d.SelectedFlavor))
            return d.SelectedFlavor;

        return "Không có";
    }
}
<div class="order-wrapper py-5">
    <h2 class="section-title">📦 Quản lý đơn hàng</h2>

    @* @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    } *@

    @if (!Model.Any())
    {
        <p class="no-orders">Không có đơn hàng nào trong hệ thống.</p>
    }
    else
    {
        @foreach (var order in Model)
        {
            <div class="order-card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <strong><i class="fas fa-receipt me-1"></i> Mã đơn:</strong> @order.Id <br />
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt me-1"></i> Ngày đặt: @order.OrderDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                        </small><br />
                        <small class="text-muted"><i class="fas fa-user me-1"></i> Người đặt: @order.User?.FullName</small>
                    </div>
                    <div class="text-end">
                        @* <p class="mb-1"><strong>Tổng tiền:</strong> <span class="text-danger fw-bold">@order.TotalPrice.ToString("N0") VNĐ</span></p> *@
                        @if (order.OrderPromotions != null && order.OrderPromotions.Any())
                        {
                            var totalDiscount = order.OrderPromotions.Sum(op => op.DiscountApplied);
                            var originalPrice = order.TotalPrice + totalDiscount;

                            <p class="mb-1">
                                <strong>Giá gốc:</strong>
                                <span class="text-muted">@originalPrice.ToString("N0") VNĐ</span>
                            </p>
                            <p class="mb-1">
                                <strong>Đã giảm:</strong>
                                <span class="text-danger fw-bold">-@totalDiscount.ToString("N0") VNĐ</span>
                            </p>
                            <p class="mb-1">
                                <strong>Thành tiền:</strong>
                                <span class="text-success fw-bold">@order.TotalPrice.ToString("N0") VNĐ</span>
                            </p>
                        }
                        else
                        {
                            <p class="mb-1">
                                <strong>Tổng tiền:</strong>
                                <span class="text-danger fw-bold">@order.TotalPrice.ToString("N0") VNĐ</span>
                            </p>
                        }

                        @if (order.Status == DoAnCoSo.Models.OrderStatusEnum.ChoXacNhan)
                        {
                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                        }
                        else if (order.Status == DoAnCoSo.Models.OrderStatusEnum.DaXacNhan)
                        {
                            <span class="badge bg-success">Đã xác nhận</span>
                        }
                        else if (order.Status == DoAnCoSo.Models.OrderStatusEnum.DaHuy)
                        {
                            <span class="badge bg-danger">Đã hủy</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@order.Status.ToString()</span>
                        }
                    </div>
                </div>

                <div class="card-body">
                    <strong><i class="fas fa-box-open me-1"></i> Chi tiết sản phẩm:</strong>
                    @if (order.OrderDetails != null && order.OrderDetails.Any())
                    {
                        <ul class="list-group list-group-flush mt-2">
                            @foreach (var item in order.OrderDetails)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-semibold">@item.Product.Name</span>
                                        <span class="text-muted">(Vị: @ShowOption(item))</span>
                                        <br />
                                        <small>Số lượng: @item.Quantity</small>
                                    </div>
                                    <span>@item.Price.ToString("N0") VNĐ</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mt-2">Không có chi tiết sản phẩm.</p>
                    }
                </div>

                <div class="card-footer text-end">
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn-detail me-2">
                        <i class="fas fa-eye me-1"></i> Xem chi tiết
                    </a>

                    @if (order.Status == DoAnCoSo.Models.OrderStatusEnum.ChoXacNhan)
                    {
                        <form asp-action="Confirm" asp-route-id="@order.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Bạn có chắc chắn muốn xác nhận đơn hàng này?');">
                            <button type="submit" class="btn-accept me-2">
                                <i class="fas fa-check-circle"></i> Xác nhận
                            </button>
                        </form>

                        <form asp-action="Cancel" asp-route-id="@order.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?');">
                            <button type="submit" class="btn-cancel">
                                <i class="fas fa-times-circle"></i> Hủy đơn
                            </button>
                        </form>
                    }
                    else if (order.Status == DoAnCoSo.Models.OrderStatusEnum.DaXacNhan)
                    {
                        <!-- Nút hủy sau khi đã xác nhận (hoàn kho) -->
                        <form asp-action="Cancel" asp-route-id="@order.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Hủy đơn đã xác nhận và hoàn kho?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning">
                                ↩️ Hủy (hoàn kho)
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    }
</div>
