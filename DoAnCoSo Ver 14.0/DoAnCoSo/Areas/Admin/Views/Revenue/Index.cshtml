@model IEnumerable<DoAnCoSo.Models.Product>
<!-- Doanh thu -->
<div class="tab-pane fade show active" id="doanhthu">
    <h3>Thống kê Doanh thu</h3>
    <div class="alert alert-info">
        Doanh thu tháng 4/2025: <strong>12,000,000đ</strong>
    </div>
    <canvas id="doanhthuChart" height="100"></canvas>
</div>


<!-- Chart.js for doanh thu -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('doanhthuChart');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4'],
        datasets: [{
          label: 'Doanh thu (VNĐ)',
          data: [5000000, 7000000, 9000000, 12000000],
          backgroundColor: 'rgba(255, 159, 64, 0.7)',
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              callback: function (value) {
                return value.toLocaleString('vi-VN') + 'đ';
              }
            }
          }
        }
      }
    });
</script>