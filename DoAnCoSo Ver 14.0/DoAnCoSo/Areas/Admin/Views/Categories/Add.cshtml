@model DoAnCoSo.Models.Category

@{
    ViewData["Title"] = "Thêm loại sản phẩm";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-50">
        <div class="card-header bg-gradient-pink text-white text-center rounded-top-4">
            <h2 class="mb-0">🌸 Thêm loại sản phẩm 🌸</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Add" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Tên loại</label>
                    <input asp-for="Name" class="form-control border-pink" placeholder="Nhập tên loại sản phẩm..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm">
                        + Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-pink px-4 py-2 rounded-pill ms-2">
                        ← Trở lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FF6B6B;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
    }

    .btn-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: #fff;
        border: none;
        transition: 0.3s;
    }

        .btn-gradient-pink:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .btn-outline-pink {
        border: 1px solid var(--pink-main);
        color: var(--pink-main);
        background-color: #fff;
        transition: 0.3s;
    }

        .btn-outline-pink:hover {
            background-color: var(--pink-accent);
            border-color: var(--pink-accent);
            color: #fff;
        }

    .border-pink {
        border: 1px solid var(--pink-main);
    }

        .border-pink:focus {
            border-color: var(--pink-accent);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
        }

    .card {
        border-radius: 1rem;
    }
</style>