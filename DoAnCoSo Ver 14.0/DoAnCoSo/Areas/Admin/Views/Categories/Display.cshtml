@model DoAnCoSo.Models.Category

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 w-75">
        <div class="card-header bg-gradient-pink text-white text-center rounded-top-4">
            <h2 class="mb-0">🌸 @Model.Name 🌸</h2>
        </div>
        <div class="card-body">
            @if (Model.Products != null && Model.Products.Any())
            {
                <h4 class="text-gradient-pink mb-3">Danh sách sản phẩm:</h4>
                <ul class="list-group list-group-flush">
                    @foreach (var product in Model.Products)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">@product.Name</span>
                            <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id"
                               class="btn btn-outline-pink btn-sm">Xem</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">Không có sản phẩm nào trong danh mục này.</p>
            }
        </div>
        <div class="card-footer text-center bg-light">
            <a asp-action="Index" class="btn btn-gradient-pink px-4 py-2 rounded-pill shadow-sm">
                ← Trở lại danh sách
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FF6B6B;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
    }

    .text-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: #fff;
        border: none;
        transition: 0.3s;
    }

        .btn-gradient-pink:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .btn-outline-pink {
        border: 1px solid var(--pink-main);
        color: var(--pink-main);
        background-color: #fff;
        transition: 0.3s;
    }

        .btn-outline-pink:hover {
            background-color: var(--pink-accent);
            border-color: var(--pink-accent);
            color: #fff;
        }

    .card {
        border-radius: 1rem;
    }
</style>