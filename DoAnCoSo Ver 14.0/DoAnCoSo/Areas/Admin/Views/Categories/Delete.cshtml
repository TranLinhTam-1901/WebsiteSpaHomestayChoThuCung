@model DoAnCoSo.Models.Category

@{
    ViewData["Title"] = "🗑️ Xóa Danh Mục";
}

<link rel="stylesheet" href="~/css/booking.css" />

<div class="container my-5">
    <div class="booking-card mx-auto text-center" style="max-width: 650px;">
        <h2 class="booking-title mb-4">⚠️ Xóa Danh Mục</h2>

        <!-- Icon hoặc ảnh minh họa -->
        <div class="text-center mb-4">
            <div class="rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm"
                 style="width:150px;height:150px;background-color:#FFF0F5;border:4px solid #FFB6C1;">
                <i class="fas fa-exclamation-triangle fa-3x" style="color:#FF6185;"></i>
            </div>
        </div>

        <p class="fw-bold" style="color:#444;">
            Bạn có chắc chắn muốn xóa danh mục
            <span style="color:#FF6185;">@Model.Name</span> không?<br />
            Hành động này không thể hoàn tác.
        </p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">
                    🗑️ Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm">
                    ← Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .booking-card {
        background-color: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    }

    .booking-title {
        font-weight: 600;
        color: #FF6185;
    }

    .section-icon {
        margin-right: 0.5rem;
    }
</style>
