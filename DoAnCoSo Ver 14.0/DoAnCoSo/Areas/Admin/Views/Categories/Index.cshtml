@model IEnumerable<DoAnCoSo.Models.Category>

<div class="container-fluid container py-5">
    <h2>Quản lý Danh mục</h2>

    <a asp-action="Add" class="btn btn-primary mb-3">+ Thêm danh mục</a>

    <table class="table table-bordered ">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-area="Admin" asp-action="Display" asp-route-id="@category.Id">Xem</a>
                        <a class="btn btn-warning btn-sm" asp-area="Admin" asp-action="Update" asp-route-id="@category.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-action="Delete" asp-route-id="@category.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
