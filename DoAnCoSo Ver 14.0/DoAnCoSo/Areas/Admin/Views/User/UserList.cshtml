@model List<DoAnCoSo.ViewModels.UserInfoViewModel>
<div class="container py-5">

<!-- Tài khoản -->
<div class="tab-pane fade show active" id="taikhoan">
    <h3>Quản lý Tài khoản</h3>

    @* <a asp-action="AddUser" class="btn btn-primary mb-3">+ Thêm tài khoản</a> *@

    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên người dùng</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Chỉnh sửa</a>

                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?')">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>