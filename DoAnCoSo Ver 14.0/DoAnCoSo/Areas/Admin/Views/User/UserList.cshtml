@model List<DoAnCoSo.ViewModels.UserInfoViewModel>

<div class="user-wrapper py-5">
    <h2 class="section-title">👤 Quản lý tài khoản</h2>

    <div class="user-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">Danh sách người dùng</h4>
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="admin-alert"
                     class="alert alert-success mb-0"
                     role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div id="admin-alert"
                     class="alert alert-danger mb-0"
                     role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" class="form-control search-input" placeholder="Tìm theo tên, email hoặc vai trò...">
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered align-middle text-center user-table">
                    <thead class="table-pink">
                        <tr>
                            <th style="width: 20%">ID</th>
                            <th style="width: 16%">Tên người dùng</th>
                            <th style="width: 14%">Tên đăng nhập</th>
                            <th style="width: 18%">Email</th>
                            <th style="width: 10%">Vai trò</th>
                            <th style="width: 10%">Trạng thái</th>
                            <th style="width: 12%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="id-cell">
                                    <span class="id-text" title="@user.Id">@user.Id</span>
                                    <button type="button" class="btn-copy" onclick="navigator.clipboard.writeText('@user.Id')">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </td>
                                <td class="text-truncate" title="@user.FullName">@user.FullName</td>
                                <td class="text-truncate" title="@user.UserName">@user.UserName</td>
                                <td class="text-truncate" title="@user.Email">@user.Email</td>
                                <td>
                                    @if (string.Equals(user.Role, "Admin", System.StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge role-admin">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge role-customer">Customer</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLocked)
                                    {
                                        <span class="badge status-locked">Đã khóa</span>
                                    }
                                    else
                                    {
                                        <span class="badge status-active">Đang hoạt động</span>
                                    }
                                </td>
                                <td class="actions-cell">
                                    <div class="actions">

                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn-accept btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>

                                        @if (string.Equals(user.Role, "Admin", System.StringComparison.OrdinalIgnoreCase))
                                        {
                                            <!-- Có thể không hiển thị gì thêm hoặc hiển thị text "Admin hệ thống" -->
                                            @* <span class="badge status-active ms-1">Admin hệ thống</span> *@
                                        }
                                        else
                                        {
                                            @* Customer: cho Khóa / Mở khóa *@
                                            if (user.IsLocked)
                                            {
                                                <form asp-action="UnlockUser" asp-route-id="@user.Id" method="post" class="d-inline-block"
                                                      onsubmit="return confirm('Bạn có chắc muốn mở khóa tài khoản này?');">
                                                    <button type="submit" class="btn-unlock btn-sm">
                                                        <i class="fas fa-lock-open"></i> Mở khóa
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="LockUser" asp-route-id="@user.Id" method="post" class="d-inline-block"
                                                      onsubmit="return confirm('Bạn có chắc muốn khóa tài khoản này? Người dùng sẽ không đăng nhập được nữa.');">
                                                    <button type="submit" class="btn-lock btn-sm">
                                                        <i class="fas fa-lock"></i> Khóa
                                                    </button>
                                                </form>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <p class="no-users">Không có người dùng nào.</p>
            }
        </div>
    </div>
</div>

<style>
    .user-wrapper {
        max-width: 1300px;
        margin: auto;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FF6185;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
    }

        .section-title::after {
            content: "";
            display: block;
            width: 80px;
            height: 4px;
            background-color: #FFB6C1;
            margin: 12px auto 0;
            border-radius: 2px;
        }

    .user-card {
        border-radius: 16px;
        border: 2px solid #FFB6C1;
        box-shadow: 0 6px 16px rgba(255, 182, 193, 0.3);
        background-color: #fff;
        overflow: hidden;
    }

    .card-header {
        background-color: #FFF0F5;
        font-weight: 600;
        padding: 12px 20px;
        border-bottom: 1px solid #FFB6C1;
    }

    .card-body {
        padding: 20px;
    }

    .table-responsive {
        border-radius: 12px;
        overflow: auto;
    }

    .user-table {
        font-size: 0.95rem;
    }

        .user-table thead.table-pink {
            background-color: #FFE4E9;
        }

        .user-table th, .user-table td {
            vertical-align: middle;
        }

        .user-table tbody tr:nth-child(even) {
            background-color: #FFF7F9;
        }

        .user-table tbody tr:nth-child(odd) {
            background-color: #FFFFFF;
        }

    .id-cell {
        display: flex;
        align-items: center;
        gap: 8px;
        justify-content: center;
        padding-left: 8px;
        padding-right: 8px;
    }

    .id-text {
        display: inline-block;
        max-width: clamp(180px, 22vw, 320px);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
        color: #333;
    }

    .btn-copy {
        border: 1px solid #FFB6C1;
        background: #FFF0F5;
        color: #C04B68;
        padding: 4px 8px;
        border-radius: 8px;
        font-size: 12px;
        cursor: pointer;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

        .btn-copy:hover {
            background: #FFB6C1;
            color: #fff;
        }

    .badge {
        font-size: 12px;
        padding: 6px 10px;
        border-radius: 12px;
    }

    .role-admin {
        background-color: #FF6185;
        color: #fff;
    }

    .role-customer {
        background-color: #E6A9EC;
        color: #fff;
    }

    .status-active {
        background-color: #4caf50;
        color: #fff;
    }

    .status-locked {
        background-color: #f44336;
        color: #fff;
    }

    .actions-cell {
        white-space: nowrap;
    }

    .actions {
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-lock {
        border: 2px solid #f44336;
        color: #f44336;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        background-color: transparent;
    }

        .btn-lock:hover {
            background-color: #f44336;
            color: #fff;
        }

    .btn-unlock {
        border: 2px solid #2196f3;
        color: #2196f3;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        background-color: transparent;
    }

        .btn-unlock:hover {
            background-color: #2196f3;
            color: #fff;
        }

    .btn-accept {
        border: 2px solid green;
        color: green;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        background-color: transparent;
    }

        .btn-accept:hover {
            background-color: green;
            color: #fff;
        }

    .no-users {
        text-align: center;
        color: #777;
        margin-top: 16px;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alertBox = document.getElementById("admin-alert");

        if (alertBox && alertBox.textContent.trim() !== "") {
            setTimeout(function () {
                alertBox.style.transition = "opacity 0.5s";
                alertBox.style.opacity = "0";

                setTimeout(function () {
                    if (alertBox && alertBox.parentNode) {
                        alertBox.parentNode.removeChild(alertBox);
                    }
                }, 600);
            }, 3000); // 3 giây cho admin list
        }
    });
</script>
