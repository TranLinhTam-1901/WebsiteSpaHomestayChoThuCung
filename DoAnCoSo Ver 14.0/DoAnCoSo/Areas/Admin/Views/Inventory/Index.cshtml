@model IEnumerable<DoAnCoSo.ViewModels.InventoryDashboardViewModel>
@{
    ViewData["Title"] = "🏭 Quản lý kho hàng";

    var showDeleted = ViewBag.ShowHidden ?? false;
}

<div class="inventory-wrapper py-5">
    <h2 class="section-title">🏭 Quản lý kho hàng</h2>

    <div class="inventory-card">

        <div class="card-header d-flex align-items-center">
            <div class="flex-grow-1">
                <h4 class="mb-0 fw-bold">Bảng tồn kho hàng</h4>
            </div>

            <div class="d-flex align-items-center gap-2  ">

                <!-- Form chứa dropdown + search -->
                <form id="filterForm" asp-action="Index" method="get" class="d-flex align-items-center gap-2">

                    <!-- Dropdown danh mục -->
                    <select name="categoryId" id="categorySelect" class="form-select custom-select">
                        <option value="">— Tất cả danh mục —</option>
                        @foreach (var cat in ViewBag.Categories)
                        {
                            @if (ViewBag.CategoryId == cat.Id)
                            {
                                <option value="@cat.Id" selected>@cat.Name</option>
                            }
                            else
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        }
                    </select>

                    <!-- Input search -->
                    <input type="text" name="search"
                           id="searchInput"
                           value="@Context.Request.Query["search"]"
                           class="form-control w-auto"
                           placeholder="Tìm kiếm ..." />

                    <!-- Hidden showHidden -->
                    <input type="hidden" name="showHidden" id="showHiddenInput" value="@(showDeleted ? "true" : "false")" />

                    <!-- Nút tìm kiếm bằng <a> -->
                    <a href="javascript:void(0);" id="btnSearch" class="btn btn-back">
                        <i class="fas fa-search"></i>
                    </a>

                </form>

                <!-- Lịch sử & Ẩn/Hiện -->
                <a asp-action="Logs" class="btn-back">
                    <i class="fas fa-history"></i>
                </a>

                <a href="javascript:void(0);"
                   id="btnToggleDeleted"
                   class="btn-back @(showDeleted ? "active" : "outline")"
                   data-show="@showDeleted.ToString().ToLower()"
                   title="Ẩn/Hiện sản phẩm đã ẩn">
                    <i class="fas @(showDeleted ? "fa-eye" : "fa-eye-slash")"></i>
                </a>

            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle text-center inventory-table">
                    <thead class="table-pink">
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 10%">Tên sản phẩm</th>
                            <th style="width: 10%">Tồn kho</th>
                            <th style="width: 10%">Đã bán</th>
                            <th style="width: 10%">Giữ tạm</th>
                            <th style="width: 15%">Ngưỡng cảnh báo</th>
                            <th style="width: 32%">Nhập/Xuất</th>
                            <th style="width: 8%">Biến thể</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="no-data">Không có sản phẩm nào.</td>
                            </tr>
                        }
                        else
                        {
                            var i = 1;
                            foreach (var p in Model)
                            {
                                bool hasVariant = p.VariantCount > 0;

                                <tr class="@(p.IsLowStock ? "row-low" : "")" data-deleted="@(p.IsDeleted ? "true" : "false")">
                                    <td>@i</td>
                                    <td>@p.ProductName</td>
                                    <td>@p.StockQuantity</td>
                                    <td>@p.SoldQuantity</td>
                                    <td>@p.ReservedQuantity</td>
                                    <td>@p.LowStockThreshold</td>

                                    <td class="actions-cell">
                                        <div class="d-flex align-items-center gap-2 justify-content-center">

                                            <!-- Form dùng chung cho nhập/xuất -->
                                            <form method="post" id="form-@p.ProductId" class="d-flex align-items-center gap-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="productId" value="@p.ProductId" />

                                                <input type="number"
                                                       name="quantity"
                                                       min="1"
                                                       class="form-control qty"
                                                       style="width:80px;"
                                                       placeholder="SL"
                                                       @(p.VariantCount > 0 ? "readonly" : "") />

                                                <input type="text"
                                                       name="note"
                                                       class="form-control note"
                                                       style="width:140px;"
                                                       placeholder="Ghi chú"
                                                       @(p.VariantCount > 0 ? "readonly" : "") />
                                            </form>

                                            <!-- NÚT NHẬP -->
                                            <a href="javascript:void(0);"
                                               class="btn-detail @(p.VariantCount > 0 ? "btn-disabled" : "")"
                                               onclick="@(p.VariantCount == 0 ? $"submitAction('{Url.Action("ImportStock")}', '{p.ProductId}')" : "null")">
                                                Nhập
                                            </a>

                                            <!-- NÚT XUẤT -->
                                            <a href="javascript:void(0);"
                                               class="btn-delete @(p.VariantCount > 0 ? "btn-disabled" : "")"
                                               onclick="@(p.VariantCount == 0 ? $"submitAction('{Url.Action("ExportStock")}', '{p.ProductId}')" : "null")">
                                                Xuất
                                            </a>

                                        </div>
                                    </td>

                                    <!-- CỘT BIẾN THỂ -->
                                    <td class="text-center">
                                        @if (p.VariantCount > 0)
                                        {
                                            <a asp-action="Variants"
                                               asp-route-productId="@p.ProductId"
                                               class="btn-blockchain">
                                                Xem (@p.VariantCount)
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn-blockchain btn-disabled">Xem</a>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<script>
    const filterForm = document.getElementById('filterForm');
    const toggleBtn = document.getElementById('btnToggleDeleted');
    const showHiddenInput = document.getElementById('showHiddenInput');
    const categorySelect = document.getElementById('categorySelect');
    const btnSearch = document.getElementById('btnSearch');

    // Load bảng tồn kho theo filter/search
    function loadTable() {
        const formData = new FormData(filterForm);
        const params = new URLSearchParams(formData).toString();
        const url = `${window.location.pathname}?${params}`;

        fetch(url)
            .then(res => res.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newTable = doc.querySelector('.inventory-table');
                document.querySelector('.inventory-table').innerHTML = newTable.innerHTML;
            })
            .catch(err => console.error(err));
    }

    // Toggle ẩn/hiện sản phẩm đã xóa
    toggleBtn.addEventListener('click', function() {
        const current = showHiddenInput.value === 'true';
        showHiddenInput.value = (!current).toString();

        const icon = toggleBtn.querySelector('i');
        icon.classList.toggle('fa-eye-slash', current);
        icon.classList.toggle('fa-eye', !current);

        toggleBtn.classList.toggle('active', !current);
        toggleBtn.classList.toggle('outline', current);

        loadTable();
    });

    // Thay đổi danh mục
    categorySelect.addEventListener('change', loadTable);

    // Nút tìm kiếm
    btnSearch.addEventListener('click', function () {
        filterForm.dispatchEvent(new Event('submit'));
    });

    // Submit filter/search
    filterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        loadTable();
    });

    async function submitAction(actionUrl, productId) {
        const form = document.getElementById("form-" + productId);
        const formData = new FormData(form);

        try {
            const res = await fetch(actionUrl, {
                method: "POST",
                body: formData,
                headers: {
                    "RequestVerificationToken": form.querySelector('input[name="__RequestVerificationToken"]').value
                }
            });

            // Nếu controller trả về redirect → 200 OK
            if (!res.ok) throw new Error("Lỗi server");

            // Lấy row hiện tại
            const row = document.querySelector(`#form-${productId}`).closest("tr");
            if (!row) return;

            // Lấy giá trị SL nhập/xuất từ form
            const quantity = parseInt(form.querySelector('input[name="quantity"]').value);
            if (isNaN(quantity) || quantity <= 0) return;

            // Cập nhật tồn kho trên client (giả lập)
            const stockCell = row.children[2];
            const soldCell = row.children[3];
            const reservedCell = row.children[4];

            // Xác định là Nhập hay Xuất dựa vào actionUrl
            if (actionUrl.includes("ImportStock")) {
                stockCell.textContent = parseInt(stockCell.textContent) + quantity;
            } else if (actionUrl.includes("ExportStock")) {
                stockCell.textContent = parseInt(stockCell.textContent) - quantity;
                soldCell.textContent = parseInt(soldCell.textContent) + quantity;
            }

            // Reset form
            form.querySelector('input[name="quantity"]').value = '';
            form.querySelector('input[name="note"]').value = '';

            // Thông báo
            console.log("Cập nhật thành công sản phẩm " + productId);
        } catch (err) {
            console.error("Lỗi submitAction:", err);
        }
    }
</script>

<style>
    .inventory-wrapper {
        max-width: 1600px;
        margin: auto;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FF6185;
        text-align: center;
        margin-bottom: 30px;
    }

        .section-title::after {
            content: "";
            width: 80px;
            height: 4px;
            display: block;
            background-color: #FFB6C1;
            margin: 12px auto 0;
            border-radius: 2px;
        }

    .inventory-card {
        border-radius: 16px;
        border: 2px solid #FFB6C1;
        box-shadow: 0 6px 16px rgba(255, 182, 193, 0.3);
        background: white;
        overflow: hidden;
    }

    .card-header {
        background-color: #FFF0F5;
        padding: 12px 20px;
        border-bottom: 1px solid #FFB6C1;
    }

    .btn-back {
        background-color: #FF6185;
        color: #fff;
        font-weight: bold;
        padding: 6px 14px;
        border-radius: 25px;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-back:hover {
            background-color: #FFB6C1;
            color: #000;
        }

    .inventory-table thead.table-pink {
        background-color: #FFE4E9;
    }

    .inventory-table th, .inventory-table td {
        vertical-align: middle;
    }

    .inventory-table tbody tr:nth-child(even) {
        background-color: #FFF7F9;
    }

    .inventory-table tbody tr:nth-child(odd) {
        background-color: #FFFFFF;
    }

    .no-data {
        padding: 20px;
        color: #777;
    }

    .qty {
        max-width: 80px
    }

    .note {
        max-width: 120px
    }

    .btn-detail, .btn-delete {
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        font-weight: bold;
        text-decoration: none;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-detail {
        border: 2px solid green;
        color: green;
        background-color: transparent;
    }

        .btn-detail:hover {
            background-color: green;
            color: #fff;
        }

    .btn-delete {
        border: 2px solid red;
        color: red;
        background-color: transparent;
    }

        .btn-delete:hover {
            background-color: red;
            color: #fff;
        }

    /* nút variant xem tùy chọn */
    .btn-blockchain {
        background-color: #8B5CF6;
        color: #fff;
        font-weight: bold;
        font-size: 12px;
        border-radius: 20px;
        padding: 4px 10px;
        text-decoration: none;
    }

        .btn-blockchain:hover {
            background-color: #5B21B6;
            color: #fff;
        }

    .btn-disabled {
        background-color: #bfbfbf !important;
        color: #666 !important;
        pointer-events: none !important;
        cursor: not-allowed !important;
        border: 1px solid #999 !important;
        opacity: 0.7;
    }

    /* Ẩn mũi tên trong input type=number */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield; /* Firefox */
    }

    /* Bỏ viền focus của input và select */
    #searchInput:focus,
    #btnSearch,
    #categorySelect:focus {
        outline: none !important;
        box-shadow: none !important;
    }

    .inventory-table input:focus {
        outline: none !important;
        box-shadow: none !important;
    }

    .inventory-table td:nth-child(2),
    .inventory-table th:nth-child(2) {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

</style>
