@model List<DoAnCoSo.ViewModels.PromotionUsageViewModel>
@{
    ViewData["Title"] = "Chi tiết sử dụng mã khuyến mãi";
    var promo = ViewBag.Promotion as DoAnCoSo.Models.Promotion;
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="fw-bold mb-0">🎟️ Chi tiết sử dụng mã: @promo.Code</h2>
        </div>

        <div class="card-body mt-3">
            <p><b>Tên khuyến mãi:</b> @promo.Title</p>
            <p><b>Số lượng phát hành:</b> @(promo.MaxUsage ?? 0)</p>
            <p><b>Đã sử dụng:</b> @promo.OrderPromotions.Count()</p>
            <p><b>Còn lại:</b> @((promo.MaxUsage ?? 0) - promo.OrderPromotions.Count())</p>

            <hr />

            @if (Model != null && Model.Any())
            {
                <table class="table table-hover text-center align-middle">
                    <thead class="table-header">
                        <tr>
                            <th>Người dùng</th>
                            <th>Email</th>
                            <th>Mã đơn hàng</th>
                            <th>Giảm giá áp dụng</th>
                            <th>Ngày dùng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usage in Model)
                        {
                            <tr>
                                <td>@usage.UserName</td>
                                <td>@usage.Email</td>
                                <td>#@usage.OrderId</td>
                                <td>@usage.DiscountApplied.ToString("N0") đ</td>
                                <td>@usage.UsedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">Chưa có ai sử dụng mã này.</div>
            }

            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary mt-3">← Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: black;
    }

    .card {
        border: 2px solid var(--pink-accent);
        border-radius: 1rem;
        background-color: #fff;
    }

    .table-header {
        background-color: #ffe6ed;
        color: #333;
        font-weight: 600;
    }

    .btn-secondary {
        background-color: #f8f9fa;
        border: 1.5px solid var(--pink-main);
        color: var(--pink-main);
    }

        .btn-secondary:hover {
            background-color: var(--pink-main);
            color: white;
        }
</style>
