@model DoAnCoSo.Models.Promotion
@{
    ViewData["Title"] = "Cập nhật khuyến mãi";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="fw-bold mb-0">✏️ Cập nhật khuyến mãi</h2>
        </div>

        <div class="card-body mt-3">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <!-- Tiêu đề -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Tiêu đề</label>
                    <input asp-for="Title" class="form-control border-pink" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Mã khuyến mãi -->
                <div class="mb-3">
                    <label asp-for="Code" class="form-label fw-semibold">Mã khuyến mãi</label>
                    <input asp-for="Code" class="form-control border-pink" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <!-- Mô tả ngắn -->
                <div class="mb-3">
                    <label asp-for="ShortDescription" class="form-label fw-semibold">Mô tả ngắn</label>
                    <input asp-for="ShortDescription" class="form-control border-pink" placeholder="VD: Giảm 10% cho mọi đơn trên 100k" />
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>

                <!-- Mô tả chi tiết -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Chi tiết khuyến mãi</label>
                    <textarea asp-for="Description" class="form-control border-pink" rows="4"
                              placeholder="Nhập mô tả chi tiết hoặc điều kiện áp dụng cụ thể..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Hiển thị như chiến dịch -->
                <div class="form-check mb-3">
                    <input asp-for="IsCampaign" class="form-check-input" id="isCampaign" />
                    <label class="form-check-label" for="isCampaign">Hiển thị như chiến dịch (có ảnh)</label>
                </div>

                <!-- Ảnh chiến dịch -->
                <div id="imageGroup" class="mb-3" style="display:@(Model.IsCampaign ? "block" : "none")">
                    <label class="form-label fw-semibold">Ảnh khuyến mãi</label>
                    <input type="file" name="imageFile" class="form-control border-pink" accept="image/*" />
                    <small class="text-muted">Nếu chọn ảnh mới, ảnh cũ sẽ được thay thế.</small>

                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mt-3">
                            <p class="fw-semibold">Ảnh hiện tại:</p>
                            <img src="~/images/promotions/@Model.Image"
                                 alt="@Model.Title"
                                 style="max-width: 250px; border-radius: 12px; box-shadow: 0 2px 6px rgba(0,0,0,0.2);" />
                        </div>
                    }
                </div>

                <!-- Mức giảm -->
                <div class="mb-3">
                    <label asp-for="Discount" class="form-label fw-semibold">Mức giảm</label>
                    <input asp-for="Discount" class="form-control border-pink" type="number" step="0.01" />
                    <div class="form-check mt-1">
                        <input asp-for="IsPercent" class="form-check-input" />
                        <label class="form-check-label">Giảm theo phần trăm (%)</label>
                    </div>
                </div>

                <!-- Ngày bắt đầu & kết thúc -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label fw-semibold">Ngày bắt đầu</label>
                        <input asp-for="StartDate" class="form-control border-pink" type="date" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label fw-semibold">Ngày kết thúc</label>
                        <input asp-for="EndDate" class="form-control border-pink" type="date" />
                    </div>
                </div>

                <!-- Giá trị đơn tối thiểu -->
                <div class="mb-3">
                    <label asp-for="MinOrderValue" class="form-label fw-semibold">Giá trị đơn tối thiểu</label>
                    <input asp-for="MinOrderValue" class="form-control border-pink" type="number" step="1" />
                </div>

                <!-- Tổng lượt & mỗi user -->
                <div class="mb-3">
                    <label asp-for="MaxUsage" class="form-label fw-semibold">Tổng lượt sử dụng</label>
                    <input asp-for="MaxUsage" class="form-control border-pink" type="number" />
                </div>

                <div class="mb-3">
                    <label asp-for="MaxUsagePerUser" class="form-label fw-semibold">Số lần mỗi user được dùng</label>
                    <input asp-for="MaxUsagePerUser" class="form-control border-pink" type="number" />
                </div>

                <!-- Trạng thái -->
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label">Đang hoạt động</label>
                </div>

                <!-- Mã riêng tư -->
                <div class="form-check mb-3">
                    <input asp-for="IsPrivate" class="form-check-input" id="isPrivateChk" />
                    <label class="form-check-label" for="isPrivateChk">🔒 Mã chỉ dành cho user cụ thể</label>
                </div>

                <!-- Gán user -->
                <div id="assignUserDiv" style="display:@(Model.IsPrivate ? "block" : "none")">
                    <label class="form-label fw-bold mt-3">👥 Chọn người dùng được áp dụng</label>
                    <select id="userSelector" name="AssignedUserIdentifiers[]" class="form-select border-pink" multiple="multiple">
                        @if (ViewBag.AssignedUsers != null)
                        {
                            foreach (var user in ViewBag.AssignedUsers)
                            {
                                <option value="@user.Id" selected>@($"{user.FullName ?? "(Chưa có tên)"} - {user.Email}")</option>
                            }
                        }
                    </select>
                    <small class="text-muted">Bạn có thể chọn nhiều user.</small>
                </div>

                <!-- Nút hành động -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">💾 Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">← Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // 🟢 Bỏ .00 khỏi số thập phân
            document.querySelectorAll('input[type="number"]').forEach(input => {
                if (input.value && input.value.endsWith(".00")) {
                    input.value = input.value.replace(".00", "");
                }
            });

            // 🟢 Hiển thị phần upload ảnh
            const campaignCheckbox = document.getElementById('isCampaign');
            const imageGroup = document.getElementById('imageGroup');
            function toggleImageGroup() {
                imageGroup.style.display = campaignCheckbox.checked ? 'block' : 'none';
            }
            campaignCheckbox.addEventListener('change', toggleImageGroup);
            toggleImageGroup();

            // 🟢 Hiển thị phần chọn user khi mã riêng tư
            const privateCheckbox = document.getElementById('isPrivateChk');
            const assignDiv = document.getElementById('assignUserDiv');
            function toggleAssignUserDiv() {
                assignDiv.style.display = privateCheckbox.checked ? 'block' : 'none';
            }
            privateCheckbox.addEventListener('change', toggleAssignUserDiv);
            toggleAssignUserDiv();

            // 🟢 Select2 Ajax
            $('#userSelector').select2({
                placeholder: "Nhập tên hoặc email để tìm...",
                allowClear: true,
                multiple: true,
                closeOnSelect: false,
                ajax: {
                    url: '@Url.Action("SearchUsers", "Promotion", new { area = "Admin" })',
                    dataType: 'json',
                    delay: 300,
                    data: params => ({ term: params.term }),
                    processResults: data => ({
                        results: data.map(u => ({
                            id: u.id,
                            text: `${u.fullName || '(Chưa có tên)'} - ${u.email}`
                        }))
                    })
                }
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: black;
    }

    .card {
        border: 2px solid var(--pink-accent);
        border-radius: 1rem;
        background-color: #fff;
    }

    .form-control, .form-select {
        border: 1.5px solid var(--pink-main);
        border-radius: 0.6rem;
    }

    .border-pink:focus {
        border-color: var(--pink-accent);
        box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
    }

    .btn-success {
        background-color: var(--pink-main);
        border: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-success:hover {
            background-color: #ff84a1;
        }

    .btn-secondary {
        background-color: #f8f9fa;
        border: 1.5px solid var(--pink-main);
        color: var(--pink-main);
        transition: 0.25s;
        font-weight: 500;
    }

        .btn-secondary:hover {
            background-color: var(--pink-main);
            color: #fff;
        }

    textarea {
        resize: none;
    }
</style>
