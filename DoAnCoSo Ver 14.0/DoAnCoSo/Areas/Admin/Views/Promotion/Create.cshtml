@model DoAnCoSo.Models.Promotion
@{
    ViewData["Title"] = "Thêm khuyến mãi mới";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <div class="card-header bg-gradient-pink text-center rounded-top-4 py-3">
            <h2 class="fw-bold mb-0">➕ Thêm khuyến mãi mới</h2>
        </div>

        <div class="card-body mt-3">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Mã khuyến mãi</label>
                    <input asp-for="Code" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="ShortDescription" class="form-label">Mô tả ngắn</label>
                    <input asp-for="ShortDescription" class="form-control" placeholder="VD: Giảm 10% cho mọi đơn trên 100k" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Chi tiết khuyến mãi</label>
                    <textarea asp-for="Description" class="form-control" rows="4"
                              placeholder="Nhập mô tả chi tiết hoặc điều kiện áp dụng cụ thể..."></textarea>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsCampaign" class="form-check-input" id="isCampaign" />
                    <label class="form-check-label" for="isCampaign">Hiển thị như chiến dịch (có ảnh)</label>
                </div>

                <div id="imageGroup" class="mb-3" style="display:@(Model?.IsCampaign == true ? "block" : "none")">
                    <label class="form-label">Ảnh khuyến mãi</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <small class="text-muted">Chỉ cần khi chọn "chiến dịch".</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Discount" class="form-label">Mức giảm</label>
                    <input asp-for="Discount" class="form-control" type="number" step="0.01" />
                    <div class="form-check mt-1">
                        <input asp-for="IsPercent" class="form-check-input" />
                        <label class="form-check-label">Giảm theo phần trăm (%)</label>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>
                    <div class="col">
                        <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="MinOrderValue" class="form-label">Giá trị đơn tối thiểu</label>
                    <input asp-for="MinOrderValue" class="form-control" type="number" step="1000" />
                </div>

                <div class="mb-3">
                    <label asp-for="MaxUsage" class="form-label">Tổng lượt sử dụng</label>
                    <input asp-for="MaxUsage" class="form-control" type="number" />
                </div>

                <div class="mb-3">
                    <label asp-for="MaxUsagePerUser" class="form-label">Số lần mỗi user được dùng</label>
                    <input asp-for="MaxUsagePerUser" class="form-control" type="number" />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label">Đang hoạt động</label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsPrivate" class="form-check-input" id="isPrivateChk" />
                    <label class="form-check-label" for="isPrivateChk">🔒 Mã chỉ dành cho user cụ thể</label>
                </div>

                <div id="assignUserDiv" style="display:@(Model?.IsPrivate == true ? "block" : "none")">
                    <label class="form-label fw-bold mt-3">👥 Chọn người dùng được áp dụng</label>
                    <select id="userSelector" name="AssignedUserIdentifiers[]" class="form-select" multiple="multiple"></select>
                    <small class="text-muted">Bạn có thể chọn nhiều user.</small>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">💾 Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">← Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const campaignCheckbox = document.getElementById('isCampaign');
            const imageGroup = document.getElementById('imageGroup');
            function toggleImageGroup() {
                imageGroup.style.display = campaignCheckbox.checked ? 'block' : 'none';
            }
            campaignCheckbox.addEventListener('change', toggleImageGroup);
            toggleImageGroup();

            const privateCheckbox = document.getElementById('isPrivateChk');
            const assignDiv = document.getElementById('assignUserDiv');
            function toggleAssignUserDiv() {
                assignDiv.style.display = privateCheckbox.checked ? 'block' : 'none';
            }
            privateCheckbox.addEventListener('change', toggleAssignUserDiv);
            toggleAssignUserDiv();

            $('#userSelector').select2({
                placeholder: "Nhập tên hoặc email để tìm...",
                allowClear: true,
                multiple: true,
                closeOnSelect: false,
                ajax: {
                    url: '@Url.Action("SearchUsers", "Promotion", new { area = "Admin" })',
                    dataType: 'json',
                    delay: 300,
                    data: params => ({ term: params.term }),
                    processResults: data => ({
                        results: data.map(u => ({
                            id: u.id,
                            text: `${u.fullName || '(Chưa có tên)'} - ${u.email}`
                        }))
                    })
                }
            });
        });
    </script>
}

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .bg-gradient-pink {
        background: linear-gradient(90deg, var(--pink-main), var(--pink-accent));
        color: black;
    }

    .card {
        border: 2px solid var(--pink-accent);
        border-radius: 1rem;
        background-color: #fff;
    }

    .form-control, .form-select {
        border: 1.5px solid var(--pink-main);
        border-radius: 0.6rem;
    }

    .btn-success {
        background-color: var(--pink-main);
        border: none;
        font-weight: bold;
    }

        .btn-success:hover {
            background-color: #ff84a1;
        }

    .btn-secondary {
        background-color: #f8f9fa;
        border: 1.5px solid var(--pink-main);
        color: var(--pink-main);
    }

        .btn-secondary:hover {
            background-color: var(--pink-main);
            color: white;
        }
</style>
