@model DoAnCoSo.Models.Promotion
@{
    ViewData["Title"] = "➕ Thêm khuyến mãi mới";
}

<link rel="stylesheet" href="~/css/booking.css" />

<div class="container my-5">
    <div class="booking-card mx-auto" style="max-width: 750px;">
        <h2 class="booking-title text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Thông tin cơ bản -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Code" class="form-label">Mã khuyến mãi</label>
                <input asp-for="Code" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ShortDescription" class="form-label">Mô tả ngắn</label>
                <input asp-for="ShortDescription" class="form-control" placeholder="VD: Giảm 10% cho mọi đơn trên 100k" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Chi tiết khuyến mãi</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <!-- Campaign / Image -->
            <div class="form-check mb-3">
                <input asp-for="IsCampaign" class="form-check-input" id="isCampaign" />
                <label class="form-check-label" for="isCampaign">Hiển thị như chiến dịch (có ảnh)</label>
            </div>

            <div id="imageGroup" class="mb-3" style="display:@(Model?.IsCampaign == true ? "block" : "none")">
                <label class="form-label">Ảnh khuyến mãi</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
            </div>

            <!-- Giảm giá -->
            <div class="mb-3">
                <label asp-for="Discount" class="form-label">Mức giảm</label>
                <input asp-for="Discount" class="form-control" type="number" step="0.01" />
                <div class="form-check mt-1">
                    <input asp-for="IsPercent" class="form-check-input" />
                    <label class="form-check-label">Giảm theo phần trăm (%)</label>
                </div>
            </div>

            <!-- Hidden field để submit -->
            <input asp-for="StartDate" type="hidden" />
            <input asp-for="EndDate" type="hidden" />

            <div class="row g-3 mb-3">
                <div class="col">
                    <label class="form-label">Ngày bắt đầu</label>
                    <input type="text"
                           id="startPicker"
                           class="form-control"
                           placeholder="Chọn ngày bắt đầu..."
                           required />
                </div>
                <div class="col">
                    <label class="form-label">Ngày kết thúc</label>
                    <input type="text"
                           id="endPicker"
                           class="form-control"
                           placeholder="Chọn ngày kết thúc..."
                           required />
                </div>
            </div>


            <div class="mb-3">
                <label asp-for="MinOrderValue" class="form-label">Giá trị đơn tối thiểu</label>
                <input asp-for="MinOrderValue" class="form-control" type="number" step="1000" />
            </div>

            <div class="row g-3 mb-3">
                <div class="col">
                    <label asp-for="MaxUsage" class="form-label">Tổng lượt sử dụng</label>
                    <input asp-for="MaxUsage" class="form-control" type="number" />
                </div>
                <div class="col">
                    <label asp-for="MaxUsagePerUser" class="form-label">Số lần mỗi user được dùng</label>
                    <input asp-for="MaxUsagePerUser" class="form-control" type="number" />
                </div>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">Đang hoạt động</label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsPrivate" class="form-check-input" id="isPrivateChk" />
                <label class="form-check-label" for="isPrivateChk">🔒 Mã chỉ dành cho user cụ thể</label>
            </div>

            <div id="assignUserDiv" style="display:@(Model?.IsPrivate == true ? "block" : "none")">
                <label class="form-label fw-bold mt-3">👥 Chọn người dùng được áp dụng</label>
                <select id="userSelector" name="AssignedUserIdentifiers[]" class="form-select" multiple="multiple"></select>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm">← Quay lại</a>
                <button type="submit" class="btn btn-pink px-4 py-2 rounded-pill shadow-sm">💾 Lưu mã</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const campaignCheckbox = document.getElementById('isCampaign');
            const imageGroup = document.getElementById('imageGroup');
            function toggleImageGroup() {
                imageGroup.style.display = campaignCheckbox.checked ? 'block' : 'none';
            }
            campaignCheckbox.addEventListener('change', toggleImageGroup);
            toggleImageGroup();

            const privateCheckbox = document.getElementById('isPrivateChk');
            const assignDiv = document.getElementById('assignUserDiv');
            function toggleAssignUserDiv() {
                assignDiv.style.display = privateCheckbox.checked ? 'block' : 'none';
            }
            privateCheckbox.addEventListener('change', toggleAssignUserDiv);
            toggleAssignUserDiv();

            $('#userSelector').select2({
                placeholder: "Nhập tên hoặc email để tìm...",
                allowClear: true,
                multiple: true,
                closeOnSelect: false,
                ajax: {
                    url: '@Url.Action("SearchUsers", "Promotion", new { area = "Admin" })',
                    dataType: 'json',
                    delay: 300,
                    data: params => ({ term: params.term }),
                    processResults: data => ({
                        results: data.map(u => ({ id: u.id, text: `${u.fullName || '(Chưa có tên)'} - ${u.email}` }))
                    })
                }
            });
        });

             // ===== Flatpickr + Hidden Date Binding (CREATE) =====
        const startHidden = document.querySelector("input[name='StartDate']");
        const endHidden   = document.querySelector("input[name='EndDate']");

        // clear giá trị ban đầu (Create luôn rỗng)
        startHidden.value = "";
        endHidden.value   = "";

        const startPicker = flatpickr("#startPicker", {
                altInput: true,
        altFormat: "d/m/Y",
        dateFormat: "Y-m-d",
            locale: "vn",
            disableMobile: true,
            onChange: function (selectedDates) {
                if (selectedDates.length > 0) {
                    startHidden.value = selectedDates[0].toISOString();
                    endPicker.set('minDate', selectedDates[0]);
                }
            }
        });

        const endPicker = flatpickr("#endPicker", {
             altInput: true,
            altFormat: "d/m/Y",
            dateFormat: "Y-m-d",
            locale: "vn",
            disableMobile: true,
            onChange: function (selectedDates) {
                if (selectedDates.length > 0) {
                    endHidden.value = selectedDates[0].toISOString();
                    startPicker.set('maxDate', selectedDates[0]);
                }
            }
        });

    </script>
}

<style>
    :root {
        --pink-main: #FF6185;
        --pink-accent: #FFB6C1;
    }

    .booking-card {
        border-radius: 16px;
        border: 2px solid var(--pink-accent);
        box-shadow: 0 6px 16px rgba(255, 182, 193, 0.3);
        background-color: #fff;
        padding: 2rem;
    }

    .booking-title {
        color: var(--pink-main);
        font-weight: bold;
        font-size: 1.8rem;
    }

    .form-check-input:checked {
        background-color: #FF6185 !important;
        border-color: #FF6185 !important;
    }

    .form-check-input:focus:not(:checked) {
        border-color: #FF6185 !important;
    }

    .form-check-input:focus {
        box-shadow: none;
        outline: none;
    }

    /* Ẩn mũi tên trong input type=number */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield; /* Firefox */
    }
</style>
