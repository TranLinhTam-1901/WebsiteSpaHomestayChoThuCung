    // ------------------- Quản lý Collapse bằng Bootstrap API -------------------
    document.addEventListener('DOMContentLoaded', function () {
        const collapseElements = document.querySelectorAll('.collapse');

        collapseElements.forEach(function (collapseElement) {
            // Khởi tạo collapse của Bootstrap (không toggle tự động)
            var bsCollapse = new bootstrap.Collapse(collapseElement, {
                toggle: false  // Đảm bảo rằng collapse không tự động mở khi tải trang
            });

            // Lắng nghe sự kiện "show" (khi phần tử collapse được mở)
            collapseElement.addEventListener('show.bs.collapse', function () {
                // Optional: Thêm logic khi phần collapse được mở
                console.log("Collapse is opening");
            });

            // Lắng nghe sự kiện "hidden" (khi phần tử collapse bị ẩn)
            collapseElement.addEventListener('hidden.bs.collapse', function () {
                // Optional: Thêm logic khi phần collapse bị đóng
                console.log("Collapse is closing");
            });
        });
    });
</script>
@functions {
    string IsActive(string controller, string action)
    {
        var routeData = ViewContext.RouteData.Values;
        var currentController = routeData["controller"]?.ToString();
        var currentAction = routeData["action"]?.ToString();

        return (currentController == controller && currentAction == action) ? "active" : "";
    }
}
