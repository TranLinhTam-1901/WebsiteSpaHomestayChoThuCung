                <i class="bi bi-gift"></i> Khuyến mãi
            </a>

            <a class="nav-link @(IsActive("Order", "Index"))"
               asp-area="Admin" asp-controller="Order" asp-action="Index">
                <i class="bi bi-receipt"></i> Đơn hàng
            </a>

            <a class="nav-link @(IsActive("Inventory", "Index"))"
               asp-area="Admin" asp-controller="Inventory" asp-action="Index">
                <i class="bi bi-box-seam"></i> Kho hàng
            </a>

            <a class="nav-link @(IsActive("Pet", "Index"))"
               asp-area="Admin" asp-controller="Pet" asp-action="Index">
                <i class="bi bi-clipboard-heart"></i> Hồ sơ thú cưng
            </a>

            <a class="nav-link @(IsActive("Blockchain", "Index"))"
               asp-area="Admin" asp-controller="Blockchain" asp-action="Index">
                <i class="bi bi-link-45deg"></i> Blockchain
            </a>

            <a class="nav-link @(IsActive("User", "UserList"))"
               asp-area="Admin" asp-controller="User" asp-action="UserList">
                <i class="bi bi-people"></i> Tài khoản
            </a>

            <a class="nav-link @(IsActive("Service", "PendingAppointments"))"
               asp-area="Admin" asp-controller="Service" asp-action="PendingAppointments">
                <i class="bi bi-journal-check"></i> Xác nhận đặt lịch
            </a>

            <a class="nav-link @(IsActive("Service", "AppointmentHistory"))"
               asp-area="Admin" asp-controller="Service" asp-action="AppointmentHistory">
                <i class="bi bi-clock-history"></i> Lịch sử đặt lịch
            </a>
            <!-- Mục "Đặt lịch" trong sidebar -->
            <a class="nav-link" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#bookingMenu" aria-expanded="false" aria-controls="bookingMenu">
                <i class="bi bi-calendar-check"></i> Đặt lịch
            </a>
            <div class="collapse" id="bookingMenu">
                <a class="nav-link @(IsActive("Service", "AppointmentHomestay"))" asp-area="Admin" asp-controller="Service" asp-action="AppointmentHomestay">
                    <i class="bi bi-house-door-fill"></i>Homestay
                </a>
                <a class="nav-link @(IsActive("Service", "AppointmentSpa")) " asp-area="Admin" asp-controller="Service" asp-action="AppointmentSpa">
                    <i class="bi bi-heart-pulse-fill"></i>Spa
                </a>
                <a class="nav-link @(IsActive("Service", "AppointmentVet"))" asp-area="Admin" asp-controller="Service" asp-action="AppointmentVet">
                    <i class="bi bi-hospital-fill"></i> Thú y
                </a>
            </div>


        </nav>
    </div>


    <div class="right-panel">

        <div class="admin-user-top">
            @if (SignInManager.IsSignedIn(User))
            {
                var u = await UserManager.GetUserAsync(User);

                <div class="user-info">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="user-name">
                        <i class="bi bi-person-circle me-1"></i>
                        @u.FullName
                    </a>

                    <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="/" class="logout-form">
                        <button type="submit" class="logout-btn" title="Đăng xuất">
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </form>
                </div>
            }
        </div>

    <!-- MAIN -->
    <div class="main-content">
        @RenderBody()
    </div>


    </div>
    <!-- JS LIBS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SELECT2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- SITE JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
