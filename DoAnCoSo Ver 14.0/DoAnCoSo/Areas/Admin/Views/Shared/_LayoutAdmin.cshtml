@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"] - PawHouse Admin</title>

    <!-- BOOTSTRAP & ICONS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- 🗓️ Flatpickr -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/airbnb.css" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/vn.js"></script>

    <!-- SELECT2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- SITE CSS -->
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    <link rel="stylesheet" href="~/css/adminChat.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">


    <style>

        body {
            display: flex;
            margin: 0;
            background: #f5f6fa;
            font-family: "Segoe UI", sans-serif;
        }
        /* SIDEBAR */
        .sidebar {
            width: 250px;
            background: #111317;
            height: 100vh; 
            overflow-y: auto;
            color: white;
            padding: 0 0 20px 0; /* bỏ padding top cho logo block */
            position: fixed;
            top: 0;
            left: 0;
        }
            /* Ẩn thanh cuộn xấu */
            .sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: #444;
                border-radius: 3px;
            }

                .sidebar::-webkit-scrollbar-thumb:hover {
                    background: #666;
                }
            .sidebar .logo {
                text-align: center;
                padding: 28px 20px 25px;
                background: linear-gradient(180deg, #292C33, #1E2025);
                border-bottom: 1px solid rgba(255,255,255,0.08);
                margin-bottom: 20px;
            }

                .sidebar .logo img {
                    width: 150px;
                    filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.15)); /* làm logo sáng nhẹ */
                    margin-top: 10px;
                    margin-bottom: 10px;
                }


                    .sidebar .logo img:hover {
                        transform: scale(1.03);
                        filter: drop-shadow(0 0 10px rgba(255,255,255,0.35));
                    }

            .sidebar .nav-link {
                color: #C7C7C7; /* Default text */
                padding: 12px 20px;
                display: flex;
                align-items: center;
                gap: 12px;
                border-radius: 8px;
                margin: 5px 10px;
                font-size: 15px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                /* Active & Hover */
                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255, 111, 143, 0.15); /* Hồng nhạt */
                    color: #FF6F8F !important; /* Hồng brand */
                }

                    .sidebar .nav-link:hover i,
                    .sidebar .nav-link.active i {
                        color: #FF6F8F !important;
                    }

        /* RIGHT SIDE PANEL */
        .right-panel {
            margin-left: 250px;
            width: calc(100% - 250px);
            min-height: 100vh;
            position: relative;
        }

        /* TOPBAR - small floating style */
        .admin-user-top {
            position: fixed;
            top: 15px;
            right: 25px;
            background: #ffffff;
            padding: 8px 14px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 14px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            z-index: 900;
            width: auto; /* ✔ không full width */
        }

        .main-content {
            margin-top: 30px; /* ✔ tránh bị topbar che */
            padding: 25px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-name {
            font-weight: 600;
            color: #333;
            text-decoration: none;
            cursor: pointer;
        }

            .user-name:hover {
                color: #FF6F8F;
            }

        .logout-btn {
            background: none;
            border: none;
            font-size: 18px;
            color: #dc3545;
            cursor: pointer;
            padding: 0;
        }

            .logout-btn:hover {
                color: #b52d3b;
                transform: scale(1.1);
            }

        .collapse {
            transition: height 0.3s ease-in-out;
            overflow: hidden;
            height: 0;
        }

            .collapse.show {
                height: auto;
            }

    </style>


    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- SIDEBAR -->
    <div class="sidebar">

