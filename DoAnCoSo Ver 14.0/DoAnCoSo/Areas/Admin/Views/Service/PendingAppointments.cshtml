@model List<DoAnCoSo.Models.Appointment>
@using DoAnCoSo.Extensions
@using System
@using System.Globalization

@{
    ViewData["Title"] = "Đơn đặt lịch chờ xác nhận";
}

<div class="appointment-wrapper py-5">
    <h2 class="section-title">📅 Đơn đặt lịch chờ xác nhận</h2>

    <div class="appointment-card">
        <div class="card-header">
            <h4 class="mb-0 fw-bold">Danh sách đặt lịch</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle text-center appointment-table">
                    <thead class="table-pink">
                        <tr>
                            <th style="width:15%">Mã đặt lịch</th>
                            <th style="width:20%">Thú cưng</th>
                            <th style="width:20%">Dịch vụ</th>
                            <th style="width:20%">Thời gian</th>
                            <th style="width:25%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="id-text" title="@item.AppointmentId">@item.AppointmentId</td>
                                <td>@(item.Pet?.Name ?? "N/A") (@(item.Pet?.Type ?? "N/A"))</td>
                                <td>@(item.Service?.Name ?? "N/A")</td>
                                <td>
                                    @if (item.ServiceId >= 1 && item.ServiceId <= 3)
                                    {
                                        if (item.StartDate != default(DateTime) && item.EndDate != default(DateTime))
                                        {
                                            @($"{item.StartDate:dd/MM/yyyy} - {item.EndDate:dd/MM/yyyy}")
                                        }
                                        else if (item.StartDate != default(DateTime))
                                        {
                                            @($"{item.StartDate:dd/MM/yyyy} - N/A")
                                        }
                                        else if (item.EndDate != default(DateTime))
                                        {
                                            @($"N/A - {item.EndDate:dd/MM/yyyy}")
                                        }
                                        else
                                        {
                                            @:N/A
                                        }
                                    }
                                    else
                                    {
                                        string dateDisplay = item.AppointmentDate != default(DateTime)
                                        ? item.AppointmentDate.ToString("dd/MM/yyyy")
                                        : "N/A";

                                        string timeDisplay = item.AppointmentTime != TimeSpan.Zero
                                        ? item.AppointmentTime.ToString(@"hh\:mm")
                                        : "N/A";

                                        if (dateDisplay == "N/A" && timeDisplay == "N/A")
                                        {
                                            @:N/A
                                        }
                                        else if (dateDisplay == "N/A")
                                        {
                                            @timeDisplay
                                        }
                                        else if (timeDisplay == "N/A")
                                        {
                                            @dateDisplay
                                        }
                                        else
                                        {
                                            @($"{dateDisplay} {timeDisplay}")
                                        }
                                    }
                                </td>
                                <td class="actions-cell">
                                    <div class="actions">
                                        <form asp-action="AcceptAppointment" asp-route-id="@item.AppointmentId" method="post" class="d-inline-block">
                                            <button type="submit" class="btn-accept btn-sm">
                                                <i class="fas fa-check-circle"></i> Chấp nhận
                                            </button>
                                        </form>
                                        <form asp-action="CancelAppointment" asp-route-id="@item.AppointmentId" method="post" class="d-inline-block">
                                            <button type="submit" class="btn-cancel btn-sm">
                                                <i class="fas fa-times-circle"></i> Hủy
                                            </button>
                                        </form>
                                        <a asp-action="AppointmentDetails" asp-route-id="@item.AppointmentId" class="btn-detail btn-sm">
                                            <i class="fas fa-info-circle"></i> Chi tiết
                                        </a>

                                        @{
                                            bool canEdit = false;
                                            string onclickAttr = "";
                                            string actionName = "";

                                            switch (item.Service.Category)
                                            {
                                                case ServiceCategory.Homestay:
                                                    canEdit = item.Status == AppointmentStatus.Pending &&
                                                    (item.StartDate - DateTime.Today).TotalDays >= 2;
                                                    actionName = "UpdateAppointmentHomestay";
                                                    break;

                                                case ServiceCategory.Spa:
                                                    canEdit = item.Status == AppointmentStatus.Pending &&
                                                    (item.AppointmentDate - DateTime.Today).TotalDays >= 1;
                                                    actionName = "UpdateAppointmentSpa";
                                                    break;

                                                case ServiceCategory.Vet:
                                                    canEdit = item.Status == AppointmentStatus.Pending &&
                                                    (item.AppointmentDate - DateTime.Today).TotalDays >= 1;
                                                    actionName = "UpdateAppointmentVet";
                                                    break;
                                            }

                                            var btnClass = canEdit ? "btn-update btn-sm" : "btn-update btn-sm disabled";
                                            if (!canEdit)
                                            {
                                                onclickAttr = "return false;"; // ngăn click
                                            }
                                        }

                                        <a asp-action="@actionName" asp-route-id="@item.AppointmentId" class="@btnClass" onclick="@onclickAttr">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <p class="no-appointments">Không có đơn đặt lịch nào.</p>
            }
        </div>
    </div>

    <nav>
        <ul id="pagination" class="pagination justify-content-center mt-4"></ul>
    </nav>
</div>

<style>
    :root {
        --pink-main: #ff7aa2;
        --pink-light: #ffe3ec;
        --pink-dark: #e74c7b;
    }

    .appointment-wrapper {
        max-width: 1300px;
        margin: auto;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #FF6185;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
    }

        .section-title::after {
            content: "";
            display: block;
            width: 80px;
            height: 4px;
            background-color: #FFB6C1;
            margin: 12px auto 0;
            border-radius: 2px;
        }

    .appointment-card {
        border-radius: 16px;
        border: 2px solid #FFB6C1;
        box-shadow: 0 6px 16px rgba(255, 182, 193, 0.3);
        background-color: #fff;
        overflow: hidden;
    }

    .card-header {
        background-color: #FFF0F5;
        font-weight: 600;
        padding: 12px 20px;
        border-bottom: 1px solid #FFB6C1;
    }

    .card-body {
        padding: 20px;
    }

    .appointment-table thead.table-pink {
        background-color: #FFE4E9;
    }

    .appointment-table th, .appointment-table td {
        vertical-align: middle;
    }

    .appointment-table tbody tr:nth-child(even) {
        background-color: #FFF7F9;
    }

    .appointment-table tbody tr:nth-child(odd) {
        background-color: #FFFFFF;
    }

    .id-text {
        display: inline-block;
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-family: monospace;
        color: #333;
    }

    .actions-cell {
        white-space: nowrap;
    }

    .actions {
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-detail {
        background-color: #FFB6C1;
        color: #000;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        text-decoration: none;
    }

        .btn-detail:hover {
            background-color: #FF6185;
            color: #fff;
        }

    .btn-cancel {
        border: 2px solid red;
        color: red;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        background-color: transparent;
    }

        .btn-cancel:hover {
            background-color: red;
            color: #fff;
        }

    .btn-accept {
        border: 2px solid green;
        color: green;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        background-color: transparent;
    }

        .btn-accept:hover {
            background-color: green;
            color: #fff;
        }

    .btn-update {
        background-color: #FFD633;
        color: #000;
        font-weight: bold;
        padding: 4px 10px;
        font-size: 12px;
        border-radius: 20px;
        text-decoration: none;
    }

        .btn-update:hover {
            background-color: #FFB800;
            color: #fff;
        }

    a.btn-update.disabled {
        pointer-events: none; /* không thể click */
        opacity: 0.5; /* xám đi */
        cursor: not-allowed; /* con trỏ báo không thể click */
    }

    .no-appointments {
        text-align: center;
        color: #777;
        margin-top: 16px;
    }

    /* PAGINATION */
    .pagination .page-link {
        color: var(--pink-dark);
        border-color: #FFB6C1;
        font-weight: bold;
    }

        .pagination .page-link:hover {
            background-color: #FFB6C1;
            color: white;
        }

    .pagination .active .page-link {
        background-color: var(--pink-dark);
        border-color: var(--pink-dark);
        color: white;
    }

        /* 👉 BỎ FOCUS */
        .pagination .page-link:focus,
        .pagination .active .page-link:focus {
            outline: none !important;
            box-shadow: none !important;
        }
</style>

<script>
        document.addEventListener('DOMContentLoaded', () => {
        const itemsPerPage = 10; // số hàng mỗi trang
        const rows = document.querySelectorAll(".appointment-table tbody tr");
        const totalItems = rows.length;
        const totalPages = Math.ceil(totalItems / itemsPerPage);
        const pagination = document.getElementById("pagination");

        function showPage(page) {
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;

            rows.forEach((row, index) => {
                row.style.display = (index >= start && index < end) ? "" : "none";
            });

            // cập nhật active pagination
            document.querySelectorAll("#pagination li").forEach(li => li.classList.remove("active"));
            const currentPage = document.querySelector(`#pagination li[data-page='${page}']`);
            if (currentPage) currentPage.classList.add("active");

            // cuộn lên đầu bảng
            const card = document.querySelector(".appointment-card");
            if (card) {
                window.scrollTo({ top: card.offsetTop - 20, behavior: "smooth" });
            }
        }

        // tạo pagination
        if (totalPages > 1) {
            pagination.innerHTML = ""; // xóa nếu đã có
            for (let i = 1; i <= totalPages; i++) {
                const li = document.createElement("li");
                li.classList.add("page-item");
                li.setAttribute("data-page", i);

                const a = document.createElement("a");
                a.classList.add("page-link");
                a.href = "#";
                a.textContent = i;

                a.addEventListener("click", function(e) {
                    e.preventDefault();
                    showPage(i);
                });

                li.appendChild(a);
                pagination.appendChild(li);
            }
        }

        // hiển thị trang đầu tiên
        if (totalPages > 0) showPage(1);
    });
</script>