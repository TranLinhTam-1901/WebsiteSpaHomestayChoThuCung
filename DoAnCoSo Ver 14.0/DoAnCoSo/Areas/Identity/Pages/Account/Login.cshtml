@page
@model LoginModel

<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            
            <div class="col col-lg-6 col-xl-5">
                <div class="card text-black shadow-lg" style="border-radius: 25px;">

                    <div class="card-body p-md-5">
                        <div class="text-center">
                            <h3 class="fw-bold mb-4">Đăng Nhập</h3>
                        </div>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-outline mb-4">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="Nhập email" />
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                                <div class="input-group mt-1">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="current-password" placeholder="Mật khẩu" />
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Đăng Nhập</button>
                            </div>

                            <p class="text-center mt-4">
                                <a class="text-muted" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                            </p>

                            <p class="text-center">
                                Bạn chưa có tài khoản?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">Đăng ký tại đây</a>
                            </p>
                        </form>
                    </div>

                </div>
            </div>

            @* <div class="col-md-6 d-none d-md-block h-100"> *@
            @*     <img src="~/images/loginlogout.png" *@
            @*          alt="Login image" class="img-login"> *@
            @* </div> *@
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}